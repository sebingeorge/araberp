@model ArabErp.Domain.SupplierCategory
@{ViewBag.Title = "create";Layout = "~/Views/Shared/_Layout.cshtml";}


<script>
    $(document).ready(function () {
        $('#SupplierCategory_form').bootstrapValidator({
            fields: {
                SupCategoryRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                SupCategoryName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

                //SupCategoryShortName: {
                //    validators: {
                //        notEmpty: {
                //            message: 'Please Enter Short Name'
                //        }
                //    }
                //},

            }
        });
    })

</script>


<div class="h4bgcolor">
    <h4>Supplier Category</h4>
</div>

<div class="container ">
    <div class="row ">

        <div class="col-md-3">

        </div>
        <div class="col-md-6">
             @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "SupplierCategory_form" }))
                   {
    
                <div class="row form-group ">
                    <div class="col-md-6">
                        <label for="SupCategoryRefNo">Code</label>
                        @Html.TextBoxFor(m => m.SupCategoryRefNo, new { @class = "form_input", autocomplete = "off" })
                    </div>

                    <div class="col-md-6">
                        <label for="SupCategoryName">Name</label>
                        @Html.TextBoxFor(m => m.SupCategoryName, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>


                <div class=" row form-group ">
                    <div class="col-md-6 ">
                        <label for="SupCategoryShortName">Short Name</label>
                        @Html.TextBoxFor(m => m.SupCategoryShortName, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-12">
                        <div style="float:right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>
             }
           
        </div>

        <div class="col-md-3">

        </div>

    </div>
    <div class="col-md-3 ">
    </div>

    <div class="col-md-6">
        @Html.Action("FillSupplierCategoryList")
    </div>

    <div class="col-md-3">
    </div>
</div>


