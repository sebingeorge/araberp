@model IEnumerable<ArabErp.Domain.BayStatus>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Bay Status Report</h4>
        </div>
        
        <div class="main-part pad1">
            <div class="col-md-12">
                <div>
                    <h5>Refrigerated Transport Vehicles Service Bay Allocation and Status Report on @DateTime.Now.ToString("dd MMM yyyy")</h5>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        @Html.Partial("_BayPartial", item)
                    }
                </div>                
            </div>            
        </div>
    </div>
</div>
