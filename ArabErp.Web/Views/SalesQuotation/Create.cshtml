                        var discount = $("#SalesQuotationItems_" + row + "__Discount").val();

                        if (quantity == NaN) {
                            quantity = 0;
                        }
                        if (rate == NaN) {
                            rate = 0;
                        }
                        if (discount == NaN) {
                            discount = 0;
                        }
                        var amount = (quantity * rate) - discount;
                        $("#SalesQuotationItems_" + row + "__Amount").val(amount);
                        calculateSummary();
                    }

                    function calculateSummary() {
