                        discount = 0;
                    }
                    var amount = rate * quantity;// - discount;
                    amount = parseFloat(amount);
                    $("#SalesQuotationItems_" + row + "__Amount").val(amount.toFixed(2));
                    $("#SalesQuotationItems_" + row + "__TotalAmount").val(((amount)-discount).toFixed(2));
