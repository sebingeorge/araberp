                        $("#SalesQuotationItems_" + row + "__Discount").val($("#SalesQuotationItems_" + row + "__Rate").val());
                    }

                    if (isNaN(quantity)) {
                        quantity = 0;
                    }
                    if (rate == NaN) {
                        rate = 0;
                    }

