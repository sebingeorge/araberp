@using ArabErp.Domain
@model IEnumerable<PendingSaleOrderForTransactionApproval>
@{
    ViewBag.Title = "Pending SaleOrder Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string actionName = ViewContext.RouteData.GetRequiredString("action");
 }

<script type="text/javascript">
    function Exit() {
        var url = '@Url.Action("Index","Home")';
        window.location = url;
    }
    function Filter() {

        var ChassisNo = $("#chassisno").val().trim();
        var Customer = $("#Customer").val().trim();
        var JobcardNo = $("#JobcardNo").val().trim();
        var url = '@Url.Action("SaleOrderApprovalDeliveryChellan")';
        url += "?ChassisNo=" + encodeURIComponent(ChassisNo) + "&Customer=" + encodeURIComponent(Customer) + "&JobcardNo=" + encodeURIComponent(JobcardNo);
        $("#Approval_del").load(url, function () {
            $("#Approval_del").removeClass("fade");

        });
    }
</script>

<div class="row">
    <div class="form-head1">
        @if (actionName == "PendingSaleOrderApproval")
        {
            <h4>Pending SaleOrder Acceptance</h4>
        }
        else if (actionName == "PendingSaleOrderApprovalWR")
        {
            <h4>Pending SaleOrder Approval - Workshop Request</h4>
        }
        else if (actionName == "PendingSaleOrderApprovalJC")
        {
            <h4>Pending SaleOrder Approval - Job Card</h4>
        }
        else if (actionName == "PendingSaleOrderApprovalDEL")
        {
            <h4>Pending SaleOrder Approval - Delivery Challan</h4>
        }
    </div>
    <div class="main-part pad1">
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class="row form-group">
                    <div class="col-md-2">
                        <label>Jobcard No.</label>
                        <input id="JobcardNo" class="form_input" placeholder="Search for Jobcard No." onkeyup="Filter()" />
                    </div>
        
                    <div class="col-md-2">
                        <label>Reg No./Chassis No.</label>
                        <input id="chassisno" class="form_input" placeholder="Search for Reg No./Chassis No." onkeyup="Filter()" />
                    </div>

                    <div class="col-md-2">
                        <label>Customer</label>
                        <input id="Customer" class="form_input" placeholder="Search for Customer " onkeyup="Filter()" />
                    </div>
                  
                </div>

                <div class="table-responsive" id="Approval_del">
                    @Html.Action("SaleOrderApprovalDeliveryChellan")
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-12 hrpart">
                @*<input type="button" class="form-button" onclick="PreviousList()" value="Previous">*@
                <input type="button" class="form-button right" onclick="Exit()" value="Exit">
            </div>
        </div>
    </div>
  
</div>

