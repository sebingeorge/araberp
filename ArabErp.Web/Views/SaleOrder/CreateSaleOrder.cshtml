                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    </div>
            <div class="row">
                <div class="col-md-12">
                    <div class=" col-md-12 form-group">
                        <label for="SplRemarks1">Spl.Remarks</label>
                        <textarea id="SplRemarks1" style="min-width: 100%"></textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6 form-group">
                        <label for="payterms">Payment Terms</label>
                        <input type="text" id="payterms" style="min-width: 100%" class="form_input" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="delterms">Delivery Terms</label>
                        <input type="text" id="delterms" style="min-width: 100%" class="form_input" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="col-md-7 form-group ">
                        <label for="cmagent">Commission Agent</label>
                        <input type="text" id="cmagent" class="form_input" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-7 form-group align_right ">
                        <label for="cmamt">Commission Amount</label>
                        <input type="text" id="cmamt" class="form_input" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-7 col-md-offset-5  form-group align_left ">
                        <label for="selectorder">Order Taken By</label>
                        <select id="selectorder" class="form_input">
                            <option>Select Order Taken By</option>
                            <option>Order1</option>
                            <option>Order2</option>
                            <option>Order3</option>
                        </select>
                    </div>
                </div>
             
                        <div class="col-md-12 col-md-4">
