
@{
    ViewBag.Title = "Create SaleOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:#A9B7C0">
        <h4>Sale Order</h4>
</div>
<div class="container ">
          <form>
            <div class="row">
                <div class="col-md-4">
                    <div class="col-md-7 form-group">
                        <label for="sono">SO.No.</label>
                        <input type="text" id="sono" class="form_input" />
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-4 ">
                    <div class="col-md-7 col-md-offset-5 form-group align_left">
                        <label for="inputDate">Date</label>
                        <input type="date" id="inputDate" class="form_input" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-7 form-group ">
                        <label for="selectCustomer">Customer</label>
                        <select id="selectCustomer" class="form_input">
                            <option>Select Customer</option>
                            <option>Cus1</option>
                            <option>Cus2</option>
                            <option>Cus3</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-7 form-group align_right ">
                        <label for="cusref">Customer Order Ref.</label>
                        <input type="text" id="cusref" class="form_input" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class=" col-md-7 col-md-offset-5 form-group align_left">
                        <label for="selectvehicle">
                            Vehicle Model
                        </label>
                        <select id="selectvehicle" class="form_input">
                            <option style="max-width: 280px" class="text-right">Select Vehicle</option>
                            <option>Vehicle1</option>
                            <option>Vehicle2</option>
                            <option>Vehicle3</option>
                        </select>
                    </div>
                </div>
            </div>
                <div class="container">
                    <div class=" table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="grid_heading">
                                    <th width="5%">Sl.No.</th>
                                    <th width="25%">Product</th>
                                    <th width="25%">Description</th>
                                    <th width="5%" class="text-right ">Qty</th>
                                    <th width="5%">Unit</th>
                                    <th width="10%" class="text-right ">Rate</th>
                                    <th width="10%" class="text-right ">Discount</th>
                                    <th width="10%" class="text-right ">Amount</th>
                                </tr>
                            </thead>
                            <tbody class="grid_row">
                                <tr>
                                    <td>1</td>
