@model IList<ArabErp.Domain.SaleOrder>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="20%" class="text-left"><h1>SO No</h1></th>
            <th width="10%" class="text-left"><h1>SO Date</h1></th>
            <th width="10%" class="text-right"><h1>Amount</h1></th>
            <th width="20%" class="text-left"><h1>Order Taken</h1></th>
            <th width="20%" class="text-left"><h1>Sales Executive</h1></th>
            <th width="11%" class="text-right"><h1>Incentive Amount</h1></th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @{
            if (Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="text" value="@Model[i].SaleOrderRefNo" class=" form_input" disabled />
                        </td>
                        <td>
                            <input type="text" value="@Model[i].SaleOrderDate.ToString("dd MMMM yyyy")" class="form_input" disabled />
                        </td>
                        <td>
                            <input type="text" value="@Model[i].TotalAmount" class="form_input" disabled />
                        </td>
                        <td>
                            <input type="text" value="@Model[i].EmployeeName" class="form_input" disabled />
                        </td>
                        <td>
                            <input type="text" value="@Model[i].CommissionAgentName" class="form_input" disabled />
                        </td>
                        <td>
                            <input type="text" value="@Model[i].CommissionAmount" class="form_input" disabled />
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <center>
                            <em>No Incentives found</em>
                        </center>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<br />
<div class="row-count1">
    <h5>Total Incentive Amount = @Model.Sum(a => a.CommissionAmount)</h5>
</div>

