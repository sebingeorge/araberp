
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color:#BCBABE">
    <h4>Currency</h4>
</div>

<div class="container">
    <div class="row">
        <div class=" col-md-6 col-md-offset-3">
            <form role="form">

                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="code">Code</label>
                        <input type="text" id="code" autocomplete="off" class="form_input "/>
                    </div>

                    <div class="col-md-6 ">
                        <label for="name">Currency</label>
                        <input type="text" id="name" autocomplete="off" class="form_input " />
                    </div>
                </div>

                <div class="row form-group ">
                  
                        <div class="col-md-6">
                            <label for="elementary">Elementary</label>
                            <input type="text" id="elementary" autocomplete="off" class=" form_input" />
                        </div>

                    <div class="col-md-6">
                        <label for="exrate">Exchange Rate</label>
                        <input type="text" id="exrate" autocomplete="off" class="form_input" />

                    </div>
                </div>

                <div class="row form-group ">
                    <div class=" col-md-6">
                        <label for="symbol">Symbol</label>
                        <select id="symbol" class=" form_input " autocomplete="off">
                            <option>Select Symbol</option>
                            <option>$</option>
                            <option>Y</option>
                            <option>R</option>
                        </select>
                    </div>
                </div>
             
                <div class="col-md-12 col-md-4">
                    <div style="float:left" class="alignCenter">
                        <button type="submit" class="button-style">Exit</button>
                    </div>
                    <div style="float:right" class="alignCenter">
                        <button type="submit" class="button-style">Save</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
           
        </div>
