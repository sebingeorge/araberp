@model IList< ArabErp.Domain.Currency>
@using GridMvc.Html

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>


<div class="table-responsive">

    <div class="main-grid">

        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.CurrencyId).Titled("ID").SetWidth(30);
                            columns.Add(m => m.CurrencyRefNo).Titled("Ref No.").SetWidth(30);
                            columns.Add(m => m.CurrencyName).Titled("Currency").SetWidth(110);
                            columns.Add(m => m.Elementary).Titled("Elementary").SetWidth(110);
                            columns.Add(m => m.CurrencyExRate).Titled("Exchange Rate").SetWidth(30);
                            //columns.Add(m => m.CurrencySymbolId).Titled("Symbol Id").SetWidth(30);
                            columns.Add(m => m.SymbolName).Titled("Symbol").SetWidth(30);
                            @*columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="">Delete</a>);*@
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="@Url.Action("Edit", new { Id = o.CurrencyId })">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="@Url.Action("Delete", new { Id = o.CurrencyId })">Delete</a>);

                            //.Format("<a href="\"DeleteRecord?name={CategoryName}\"">{CategoryName}</a>");

                            //columns.Add(m => m.CurrencyName).Sortable(true);
                        }).WithPaging(10)

</div>

    <div class="row-count1">
        <h5>Row Count:- @Model.Count()</h5>
    </div>   


    </div>