@model IList< ArabErp.Domain.Currency>

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>

<div class="table-responsive">

    <table class="table table-bordered table-hover" id="tab_logic">
        <tr class="grid_heading">
            <td style="width:2%;"><h1>Ref No.</h1></td>
            <td style="width:13%;"><h1>Name</h1></td>
            <td style="width:13%;"><h1>Elementary</h1></td>
            <td style="width:13%;"><h1>Exchange Rate</h1></td>
            <td style="width:2%;"><h1>Symbol</h1></td>
        </tr>

        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <tr class="grid">
                    <td class="tableData main-list-inn">

                        @*@Html.HiddenFor(m => m[i].grdCode)
                            @Html.HiddenFor(m => m[i].grdName)*@
                        @Model[i].CurrencyRefNo
                    </td>
                    <td>
                        @*@Html.TextBoxFor(m => m[i].CurrencyName, new { @style = "", @class = "numbersOnly" })*@
                        @Model[i].CurrencyName
                    </td>
                    <td class="align">
                        @Model[i].Elementary
                    </td>
                    <td style="text-align:right" class="align">
                        @Model[i].CurrencyExRate
                    </td>
                    <td style="text-align:center" class="align">
                        @Model[i].SymbolName
                    </td>

                </tr>
            }
        }

    </table>

</div>