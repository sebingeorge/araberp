@model IList<ArabErp.Domain.PurchaseRequest>



<script type="text/javascript">


    $(document).ready(function () {
        $("input[type='text']").attr("disabled", "true");

        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "" && '@TempData["PurchaseRequestNo"]' != "") {
            toastr.success('@TempData["success"]' + '  Purchase Request No. is : ' + '@TempData["PurchaseRequestNo"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }

    })

</script>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="3%" class="text-center"><h1>#</h1></th>
            <th width="10%" class="text-left" title="Purchase Request Ref.No. and Date"><h1>PR Ref. No. &amp; Date</h1></th>
            <th width="20%"><h1>Customer</h1></th>
            <th width="10%" title="WorkShop Request Ref. No. and Date"><h1>WR Ref. No. &amp; Date</h1></th>
            <th width="5%"><h1>Required Date</h1></th>
            <th width="1%" class="text-center"></th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @if (Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" class="form_input text-center" style="width:100%" value="@(i+1)" />
                    </td>
                    <td>
                        <input type="text" class="form_input" style="width:100%" value="@Model[i].PurchaseRequestNo - @Model[i].PurchaseRequestDate.ToString("dd MMMM yyyy")" />
                    </td>
                    <td>
                        <input type="text" class="form_input" style="width:100%" value="@Model[i].CustomerName" />
                    </td>
                    <td>
                        <input type="text" class="form_input" style="width:100%" value="@Model[i].WorkShopRequestRefNo" />
                    </td>
                    <td>
                        <input type="text" class="form_input" style="width:100%" value="@Model[i].RequiredDate.ToString("dd MMM yyyy")" />
                    </td>

                    <td>
                        <input type="button" class="form-button4" onclick="OnSelected(@Model[i].PurchaseRequestId)" value="Select" title="Select to view details" />
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <center>
                        <em>No items found!</em>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>


<br />
<div class="row-count1">
    <h5>Row Count:- @Model.Count()</h5>
</div>


