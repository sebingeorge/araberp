@using ArabErp.Domain
@model IEnumerable<PendingWorkShopRequest>
@{
    ViewBag.Title = "Pending WorkShopRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="form-head1">
            <h4>Pending WorkShop Requests</h4>
        </div>

        <div class="main-part pad1">
            <div class="table-responsive  border">


                <div class="row">

                    <div class="col-md-12">

                        <div class="col-md-3 grid-left">Customer</div>
                        <div class="col-md-2 grid-left">Customer Order Ref.</div>
                        <div class="col-md-2 grid-left">SO No & Date</div>
                        <div class="col-md-2 grid-left">WR No & Date</div>
                        <div class="col-md-2 grid-left">Delivery Date</div>
                        <div class="col-md-1 grid-left"><center>Select</center></div>

                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="col-md-2  grid_row_pr grid_row_pr1">@item.CustomerName</div>
                        <div class="col-md-2  mtop grid_row_pr">@item.CustomerOrderRef</div>
                        <div class="col-md-2  mtop grid_row_pr">@item.SaleOrderRefNo &amp; @item.SaleOrderDate.ToString("dd/MMM/yyyy")</div>
                        <div class="col-md-2  mtop grid_row_pr">@item.WorkShopRequestNo &amp; @item.WorkShopRequestDate.ToString("dd/MMM/yyyy")</div>
                        <div class="col-md-2  mtop grid_row_pr">@item.RequiredDate.ToString("dd/MMM/yyyy")</div>
                        <div class="col-md-1 mtop form-button3">@Html.ActionLink("Select", "Create", "PurchaseRequest", new { WorkShopRequestId = @item.WorkShopRequestId }, null) </div>
                    }
                </div>

            </div>

                    </div>
                </div>
            </div>
