@using ArabErp.Domain
@model IEnumerable<PendingWorkShopRequest>
@{
    ViewBag.Title = "Pending WorkShopRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="form-head1">
            <h4>Pending WorkShop Requests</h4>
        </div>

        <div class="main-part pad1">
            <div class="table-responsive  border">


                <div class="row">

                    <div class="col-md-12">

                        <div class="row">

                            <div class="col-md-3 grid-left">Customer</div>
                            <div class="col-md-2 grid-left">Customer Order Ref.</div>
                            <div class="col-md-2 grid-left">SO No & Date</div>
                            <div class="col-md-2 grid-left">WR No & Date</div>
                            <div class="col-md-2 grid-left">Delivery Date</div>
                            <div class="col-md-1 grid-left"><center>Select</center></div>

                        </div>

                    </div>

                    <div class="col-md-12">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <div class="col-md-3"><div class="mtop form_input">@item.CustomerName</div></div>
                                <div class="col-md-2"><div class="mtop form_input">@item.CustomerOrderRef</div></div>
                                <div class="col-md-2"><div class="mtop form_input">@item.SaleOrderRefNo &amp; @item.SaleOrderDate.ToString("dd/MMM/yyyy")</div></div>
                                <div class="col-md-2"><div class="mtop form_input">@item.WorkShopRequestNo &amp; @item.WorkShopRequestDate.ToString("dd/MMM/yyyy")</div></div>
                                <div class="col-md-2"><div class="mtop form_input">@item.RequiredDate.ToString("dd/MMM/yyyy")</div></div>
                                <div class="col-md-1"><div class="mtop form-button3"><center>@Html.ActionLink("Select", "Create", "PurchaseRequest", new { WorkShopRequestId = @item.WorkShopRequestId }, null)</center> </div></div>
                            }
                        </div>

                    </div>

                </div>

            </div>

                    </div>
                </div>
            </div>
