@model IList<ArabErp.Domain.PendingForGRN>
<table class="table table-bordered">
    <thead class="grid_heading">
        <tr>
            <th>Material/Spare</th>
            <th>Supplier</th>
            <th>Quantity</th>
            <th>Rate</th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @if (Model != null && Model.Count > 0)
        {
            bool span = true;
            foreach (var item in Model)
            {
                <tr>
                    @if (span)
                    {
                        <td rowspan="@Model.Count">@item.ItemName</td>
                        span = false;
                    }
                    <td>@item.SupplierName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Rate</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td align="center" colspan="4">
                    <em>No rate found!</em>
                </td>
            </tr>
        }
    </tbody>
</table>
