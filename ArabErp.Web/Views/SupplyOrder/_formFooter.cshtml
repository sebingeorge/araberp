@model ArabErp.Domain.SupplyOrder

<script>
    $(document).ready(function () {
        $("#NetDiscount").keyup(function () {
           
            var Total = parseFloat("0");
            var Discount = parseFloat("0");
            var NetAmt = parseFloat("0");
            var TotNetAmt = parseFloat("0");

            NetAmt = parseFloat($("#QtyAmount").text());
           
            //alert(NetAmt);

            TotNetAmt = parseFloat(NetAmt)
            if (isNaN(TotNetAmt)) {
                TotNetAmt = parseFloat("0");
           }
         
            Discount = parseFloat($("#NetDiscount").val());
            if (isNaN(Discount)) {
                Discount = parseFloat("0");
            }
           

            Total = TotNetAmt - Discount;

            $("#NetAmount").val(Total.toFixed(2))
        });

     
    });

</script>


<div class="row form-group">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-1 col-md-offset-6">
                <label for="Discount">Discount</label>
                @Html.TextBoxFor(m => m.NetDiscount, new { @class = "form_input numbers-only", @style = "text-align:right", autocomplete = "off"})
            </div>

            <div class="col-md-3">
                <label for="DiscountRemarks">Discount Remarks</label>
                @Html.TextBoxFor(m => m.DiscountRemarks, new { @class = "form_input" })
            </div>

            <div class="col-md-2">
                <label for="NetAmount">Net Amount</label>
                @Html.TextBoxFor(m => m.NetAmount, new { @class = "form_input ", @style = "text-align:right;font-size: 20px;font-weight: bold;", autocomplete = "off", @readonly = "readyonly" })
            </div>
        </div>

        <br />
        <div class="row">
                <div class="col-md-12">
                    <div class="part1">
                        <label for="SpecialRemarks">Special Remarks</label>
                        @Html.TextAreaFor(m => m.SpecialRemarks, new { @class = "form_input form_input-h" })
                    </div>
            </div>
        </div>

        <div class="row">
                <div class="col-md-12">
                    <div class="part4">
                        <label for="PaymentTerms">Payment Terms</label>
                        @Html.TextBoxFor(m => m.PaymentTerms, new { @class = "form_input" })
                    </div>
            </div>
        </div>

        <div class="row">
                <div class="col-md-12">
                    <div class="part4">
                        <label for="DeliveryTerms">Delivery Terms</label>
                        @Html.TextBoxFor(m => m.DeliveryTerms, new { @class = "form_input" })
                    </div>
            </div>
        </div>

        <div class="row">
                <div class="col-md-2">
                    <div class="part">
                        <label for="RequiredDate">Required Date</label>
                        @Html.TextBoxFor(m => m.RequiredDate, Model.RequiredDate.ToString("dd/MMMM/yyyy"), new { @class = "form_input ", autocomplete = "off" })
                    </div>
            </div>
        </div>

