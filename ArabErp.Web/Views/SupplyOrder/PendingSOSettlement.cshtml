
@model IList<ArabErp.Domain.SupplyOrderPreviousList>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Pending Supply Orders/LPO Approval";
}

<script type="text/javascript">

    $(document).ready(function () {
        //---------------------toastr---------------------------//
        toastr.options = {
            "positionClass": "toast-bottom-full-width",
            "timeOut": "5000",
            "extendedTimeOut": "2000"
        }
        if ('@TempData["success"]' != '') {
            toastr.success('@TempData["success"]');
        }
        else if ('@TempData["error"]' != '') {
            toastr.error('@TempData["error"]'.split('|')[0]);
            console.log('@TempData["error"]'.split('|')[1]);
        }
        @{ TempData["success"] = TempData["error"] = ""; }
        //------------------------------------------------------//
    })

    function Settle(id) {
        var url = '@Url.Action("Settle")';
        url += "?id=" + id;
        window.location = url;
    }

    function Exit() {
        var url = '@Url.Action("Index", "Home")';
        window.location = url;
    }

</script>


<div class="row">
    <div class="form-head1">
        <h4>Pending Supply Orders/LPO Settlement</h4>
    </div>
    <div class="main-part pad1">
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr class="grid_heading">
                                <th width="8%" nowrap><h1>LPO.No.</h1></th>
                                <th width="6%" nowrap><h1>Date</h1></th>
                                <th width="12%" nowrap><h1>Supplier</h1></th>
                                <th width="20%" nowrap><h1>Material/Spares</h1></th>
                                <th width="8%" nowrap><h1>Part No.</h1></th>
                                <th width="4%" class="text-right" nowrap><h1>Ordered Qty</h1></th>
                                <th width="4%" class="text-right" nowrap><h1>GRN Qty</h1></th>
                                <th width="4%" class="text-right" nowrap><h1>Balance Qty</h1></th>
                                <th width="1%"></th>
                            </tr>
                        </thead>
                        <tbody class="grid_row">
                            @{
                                if (Model.Count > 0)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <input type="text" value="@Model[i].SupplyOrderNo" class="form_input" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].SupplyOrderDate.ToString("dd MMM yyyy")" class="form_input" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].SupplierName" class="form_input" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].ItemName" class="form_input" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].PartNo" class="form_input" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].SuppliedQuantity" class="form_input text-right" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].GRNQty" class="form_input text-right" disabled />
                                            </td>
                                            <td>
                                                <input type="text" value="@Model[i].BalanceQuantity" class="form_input text-right" disabled />
                                            </td>
                                            
                                            <td align="center">
                                                <input type="button" value="Settlement" class="form-button4" onclick="Settle(@Model[i].SupplyOrderId)" />
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9">
                                            <center>
                                                <em>There are no supply orders for Settlement!</em>
                                            </center>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>

            </div>
            <div class="row-count1">
                <h5>Row Count:- @Model.Count()</h5>
            </div>

        </div>

        <div class="row">

            <div class="col-md-12 hrpart">
                <input type="button" class="form-button right" value="Exit" onclick="Exit()" />
            </div>
        </div>

    </div>
</div>
