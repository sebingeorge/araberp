@using ArabErp.Domain
@model IEnumerable<PendingSO>
@{
    ViewBag.Title = "PendingJobCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function GotoJobcard(id)
    {
        var url = '@Url.Action("Create")';
        url = url + "?Id=" + id;
        console.log(url);
        window.location.href = url;
    }
</script>
<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Pending Job Card</h4>
        </div>
        <div class="main-part pad1">
                <div class=" table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th><h1>SO No & Date</h1></th>
                                <th><h1>Customer</h1></th>
                                <th><h1>Customer Order Ref.</h1></th>
                                <th><h1>Vehicle Model</h1></th>
                                <th><h1>Select</h1></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody class="grid_row">
                                <tr>
                                    <td>@item.SaleOrderRefNo &amp; @item.SaleOrderDate.ToString("dd/MMM/yyyy")</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.CustomerOrderRef</td>
                                    <td>@item.VehicleModelName</td>
                                    <td><button class="form-button" onclick="GotoJobcard(@item.SaleOrderItemId)">Select</button></td>
                                </tr>
                            </tbody>
                        }                        
                    </table>
                </div>
                <div class="row">


                    <div class="col-md-12">
                        <div class="margl">
                            <button class="form-button">Previous</button>
                        </div>
                        <div class="margf">
                            <button type="submit" class="form-button">Exit</button>

                            <button type="submit" class="form-button">Proceed</button>
                        </div>

                    </div>


                </div>
        </div>
    </div>
    </div>



