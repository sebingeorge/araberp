@using ArabErp.Domain
@model IEnumerable<PendingSO>
@{
    ViewBag.Title = "PendingJobCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function GotoJobcard(id)
    {
        var url = '@Url.Action("Create")';
        url = url + "?Id=" + id;
        console.log(url);
        window.location.href = url;
    }
</script>
<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Pending Work for Job Card</h4>
        </div>
        <div class="main-part pad1 white">
            <div class="main-grid main-grid-top scroll1">
                <div class=" table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th><h1>Work Description</h1></th>
                                <th><h1>Vehicle Model</h1></th>
                                <th><h1>SO No & Date</h1></th>
                                <th><h1>Customer</h1></th>
                                <th><h1>Customer Order Ref.</h1></th>
                                <th><center><h1>Select</h1></center></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody class="grid_row">
                                <tr>
                                    <td class="grid-cell">@item.WorkDescr</td>
                                    <td class="grid-cell">@item.VehicleModelName</td>
                                    <td class="grid-cell">@item.SaleOrderRefNo &amp; @item.SaleOrderDate.ToString("dd/MMM/yyyy")</td>
                                    <td class="grid-cell">@item.CustomerName</td>
                                    <td class="grid-cell">@item.CustomerOrderRef</td>

                                    <td><center><button class="form-button4" onclick="GotoJobcard(@item.SaleOrderItemId)">Select</button></center></td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>


            </div>


