@model IList<ArabErp.Domain.JobCard>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th><h1>JobCard No.</h1></th>
            <th><h1>Date</h1></th>
            <th><h1>Customer</h1></th>
            @*<th><h1>Inpass No. & Date</h1></th>
                <th><h1>Chasis No./Reg No.</h1></th>
                <th><h1>Freezer Unit</h1></th>*@
            <th width="1%" class="text-center"></th>

        </tr>
    </thead>

    <tbody class="grid_row">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="grid-cell">@item.JobCardNo</td>
                    <td class="grid-cell">@item.JobCardDate.ToString("dd/MMM/yyyy")</td>
                    <td class="grid-cell">@item.CustomerName</td>
                    @*<td class="grid-cell">@item.VehicleInPassNo &amp; @item.VehicleInPassDate.ToString("dd/MMM/yyyy")</td>
                        <td class="grid-cell">@item.RegistrationNo</td>
                        <td class="grid-cell">@item.FreezerUnitName</td>*@
                    <td>
                        <input type="button" class="form-button4" value="Select" title="Select to view details" />
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <center><em>No items found!</em></center>
                </td>
            </tr>
        }
</tbody>
</table>






