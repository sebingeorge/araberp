@model IList<ArabErp.Domain.Item>
@using GridMvc.Html

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
      
</style>

<div class="table-responsive">
    <div class="main-grid main-grid-top">

        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.PartNo).Titled("Part No.").SetWidth(30);
                            columns.Add(m => m.ItemName).Titled("Item Name").SetWidth(110);
                            columns.Add(m => m.CategoryName).Titled("Item Category").SetWidth(110);
                            columns.Add(m => m.ItemGroupName).Titled("Item Group").SetWidth(110);
                            columns.Add(m => m.ItemSubGroupName).Titled("Item Sub Group").SetWidth(110);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="">Delete</a>);

                            //.Format("<a href="\"DeleteRecord?name={CategoryName}\"">{CategoryName}</a>");

                            //columns.Add(m => m.CurrencyName).Sortable(true);
                        }).WithPaging(10)
        </div>

    </div>

