@model IList<ArabErp.Domain.ExpenseBillListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    function OnSelected(id) {
        var url = '@Url.Action("Edit")';
        //alert(id);
        url += "/" + id;
        window.location = url;
    }

    function Exit() {
        var url = '@Url.Action("Create", "Expense")';
        window.location = url;
    }
</script>

<div class="row">
    <div class="main-part pad1 white">
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class=" table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th width="15%"><h1>Bill No</h1></th>
                                <th width="10%"><h1>Bill Date</h1></th>
                                <th width="50%"><h1>Supplier</h1></th>
                                <th width="20%"><h1>Bill Ref.</h1></th>
                                <th width="30%"><h1>Amount</h1></th>
                                <th width="1%" class="text-center"></th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody class="grid_row">
                                <tr>
                                    <td class="grid-cell">@item.ExpenseNo</td>
                                    <td class="grid-cell">@item.ExpenseDate.ToString("dd/MMM/yyyy")</td>
                                    <td class="grid-cell">@item.SupplierName</td>
                                    <td class="grid-cell">@item.ExpenseBillRef</td>
                                    <td class="grid-cell">@item.TotalAmount</td>
                                    <td>
                                        <input type="button" class="form-button4" onclick="OnSelected(@item.ExpenseId)" value="Select" title="Select to view details" />
                                    </td>

                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>


        <div class="row-count">
            <h5>Row Count:- @Model.Count()</h5>
        </div>


    </div>
    <div class="row">
        <div class="col-md-12 hrpart">
            <input class="form-button right" type="button" value="Exit" onclick="Exit()" />
        </div>
    </div>
</div>

