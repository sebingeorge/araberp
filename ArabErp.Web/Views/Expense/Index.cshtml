@model IEnumerable<ArabErp.Domain.ExpenseBillListViewModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function GotoCreate() {
        var url = '@Url.Action("Create")';
        location.href = url;
    }
</script>

<div class="container">
    <div class="form-head1">
        <h4>Expense Bill</h4>
    </div>
    <div class="main-part white pad1">
        <div class="col-md-12">
            <div class="table-responsive">
                <div class="main-grid main-grid-top">
                    @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.ExpenseNo).Titled("Bill No").SetWidth(30);
                            columns.Add(m => m.ExpenseDate).Titled("Bill Date").SetWidth(30);
                            columns.Add(m => m.SupplierName).Titled("Supplier").SetWidth(70);
                            columns.Add(m => m.ExpenseBillRef).Titled("Bill Date").SetWidth(30);
                            columns.Add(m => m.TotalAmount).Titled("Amount").SetWidth(30);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="" onclick="OpenEdit(@o.ExpenseId);">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="" onclick="OpenDelete(@o.ExpenseId)">Delete</a>);
                        }).WithPaging(10)
                </div>
            </div>
        </div>
        <div class="marg">
            <button class="form-button" onclick="GotoCreate()">Add</button>
        </div>
    </div>
</div>

