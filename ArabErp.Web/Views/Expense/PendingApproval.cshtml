@model IList<ArabErp.Domain.ExpenseBillListViewModel>

@{
    ViewBag.Title = "Pending Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        //---------------------toastr---------------------------//
        toastr.options = {
            "positionClass": "toast-bottom-full-width",
            "timeOut": "5000",
            "extendedTimeOut": "2000"
        }
        if ('@TempData["success"]' != '') {
            toastr.success('@TempData["success"]');
        }
        else if ('@TempData["error"]' != '') {
            toastr.error('@TempData["error"]'.split('|')[0]);
            console.log('@TempData["error"]'.split('|')[1]);
        }
        @{ TempData["success"] = TempData["error"] = ""; }
        //------------------------------------------------------//

    });

    function Create() {
        var url = '@Url.Action("Create")';
        window.location = url;
    }
        function Approve(id) {
            var url = '@Url.Action("Approve")';
            url += "?id=" + id;
            window.location = url;
        }
</script>

<div class="container">
    <div class="row">

        <div class="form-head1">
            <h4>Assign Serial Number</h4>
        </div>

        <div class="main-part pad1">
            <div class="table-responsive scroll4">
                <table class="table table-bordered">
                    <thead>
                        <tr class="grid_heading">
                            <th width="3%" class="text-center">#</th>
                            <th width="15%" nowrap><h1>Expense No. &amp; Date</h1></th>
                            <th width="5%" nowrap><h1>Expense Bill Ref. No.</h1></th>
                            <th width="5%" nowrap><h1>Expense Bill Date</h1></th>
                            <th width="5%" nowrap><h1>Expense Bill Due Date</h1></th>

                            <th width="5%" nowrap>
                                <h1>
                                    @if (Model.Count > 0)
                                    {
                                        if (Model[0].Type == "SO")
                                        {
                                            @: SO Ref. No &amp; Date
                                        }
                                        else
                                        {
                                            @: JC Ref. No &amp; Date
                                        }
                                    }
                                    else
                                    {
                                        @: SO/JC Ref. No &amp; Date
                                    }
                                </h1>
                            </th>

                            <th width="10%"><h1>Supplier</h1></th>
                            <th width="5%" class="text-right"><h1>Amount</h1></th>
                            <th width="1%"></th>
                        </tr>
                    </thead>
                    <tbody class="grid_row">
                        @if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input class="form_input text-center" style="width:100%" value="@(i+1)" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" value="@Model[i].ExpenseNo - @Model[i].ExpenseDate.ToString("dd MMMM yyyy")" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" value="@Model[i].ExpenseBillRef" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" value="@Model[i].ExpenseBillDate" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" value="@Model[i].ExpenseBillDueDate" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" @{if (Model[0].Type == "SO") { @: value="@Model[i].SaleOrderRefNo - @Model[i].SaleOrderDate"
                                                                                                 } else {  @: value="@Model[i].JobCardNo - @Model[i].JobCardDate"
                                        } } disabled />
                                    </td>
                                    <td>
                                        <input class="form_input" value="@Model[i].SupplierName" disabled />
                                    </td>
                                    <td>
                                        <input class="form_input text-right" value="@Model[i].TotalAmount" disabled />
                                    </td>
                                    <td>
                                        <input type="button" class="form-button5" value="Select" onclick="Approve(@Model[i].ExpenseId)" />
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9">
                                    <center>
                                        <em>
                                            No items found!
                                        </em>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
