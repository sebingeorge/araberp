
@{
    ViewBag.Title = "DeliveryChallanList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">

    $(document).ready(function () {
        $("#txtFrom").datepicker({
            dateFormat: "dd-MM-yy"
        });
        $("#txtTo").datepicker({
            dateFormat: "dd-MM-yy"
        });
    })

    function Filter() {
      
        $("#dclist").addClass("fade");
        var id = $("#cboDCNo").val();
        var cusid = $("#cboCustomer").val();
        var from = $("#txtFrom").val();
        var to = $("#txtTo").val();
        var url = '@Url.Action("PreviousList")';

        url += "?from=" + from + "&to=" + to + "&id=" + id + "&cusid=" + cusid;

        $("#dclist").load(url, function () {
            $("#dclist").removeClass("fade");
        });
    }

</script>
<div class="row">
    <div class="form-head1">
        <h4>Delivery Challan List</h4>
    </div>
    <div class="main-part pad1">
        <div class="row form-group">
            <div class="col-md-2">
                <label for="cboDCNo">Delivery Challan No.</label>
                @Html.DropDownList("cboDCNo", (SelectList)ViewBag.DCNoList, "Any", new { @class = "form_input", @onchange = "Filter()" })
            </div>
            @*<div class="col-md-3">
                <label for="cboWRNo">Date</label>
                @Html.DropDownList("cboCustomer", (SelectList)ViewBag.CusList, "Any", new { @class = "form_input", @onchange = "OnCustomerChanged(this)" })
            </div>*@
            <div class="col-md-2">
                <label>From</label>

                <input id="txtFrom" value="@System.DateTime.Today.AddMonths(-1).ToString("dd-MMMM-yyyy")" onchange="Filter()" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>To</label>
                <input id="txtTo" value="@System.DateTime.Today.ToString("dd-MMMM-yyyy")" onchange="Filter()" class="form_input" />
            </div>
        </div>
        <div id="dclist">
            @Html.Action("PreviousList")
        </div>
    </div>
</div>


