@model IList<ArabErp.Domain.Designation>

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>

<div class="table-responsive table1">
    <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
            <tr class="grid_heading">
                <td style="width:10%;"><h1>Ref No.</h1></td>
                <td style="width:40%;"><h1>Name</h1></td>
            </tr>

            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="tableData  table-back">
                            @Model[i].DesignationRefNo
                        </td>

                        <td class="table-back">
                            @Model[i].DesignationName
                        </td>
                    </tr>
                }
            }
    </table>
</div>
