@model ArabErp.Domain.Designation
@{ ViewBag.Title = "create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#Designation_form').bootstrapValidator({
            fields: {
                DesignationRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                DesignationName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

            }
        });
    })

</script>


<div class="container">
    <div class="row">


 

            <div class="form-head1">
                <h4>Designation</h4>
            </div>

            <div class="main-part pad1">
                <div class="row">
                    <div class="col-md-4">
                    </div>

                    <div class="col-md-4">

                        @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "Designation_form" }))
                        {


                            <div class="part">
                                <label for="DesignationRefNo">Code</label>
                                @Html.TextBoxFor(m => m.DesignationRefNo, new { @class = "form_input form_input-half", autocomplete = "off" })
                            </div>



                            <div class="part">
                                <label for="DesignationName">Name</label>
                                @Html.TextBoxFor(m => m.DesignationName, new { @class = "form_input", autocomplete = "off" })
                            </div>


                            <div class="marg3">

                                <button type="button" class="form-button top1">Exit</button>


                                <button type="submit" class="form-button">Save</button>

                            </div>


                        }

                        <div class="col-md-4">
                        </div>


                    </div>







                </div>


       


        </div>


       <div class="row">



        <div class="col-md-12">
            @Html.Action("FillDesignationList")
        </div>

        </div>
    </div>

</div>