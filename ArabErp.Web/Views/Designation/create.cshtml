@model ArabErp.Domain.Designation
@{ ViewBag.Title = "create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#Designation_form').bootstrapValidator({
            fields: {
                DesignationRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                DesignationName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

            }
        });
    })

</script>

<div class="h4bgcolor">
    <h4>Designation</h4>
</div>

<div class="container">
    <div class="row">

        <div class=" col-md-4">
        </div>

        <div class="col-md-4">
            @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "Designation_form" }))
                   {

                <div class="row form-group ">
                    <div class="col-md-12">
                        <label for="DesignationRefNo">Code</label>
                        @Html.TextBoxFor(m => m.DesignationRefNo, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-12">
                        <label for="DesignationName">Name</label>
                        @Html.TextBoxFor(m => m.DesignationName, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-12">
                        <div style=" float :right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>

                        <div style=" float :right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="col-md-4">

        </div>
    </div>

    <div class="col-md-4">
    </div>

    <div class="col-md-4">
        @Html.Action("FillDesignationList")
    </div>

    <div class="col-md-4">
    </div>
</div>

