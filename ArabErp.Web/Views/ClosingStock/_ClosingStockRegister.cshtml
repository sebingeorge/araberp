@model IList<ArabErp.Domain.ClosingStock>
<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="40%"><h1>Material/Spares</h1></th>
            <th width="10%"><h1>Ref No</h1></th>
            <th width="15%"><h1>Part No</h1></th>
            <th class="text-right" width="10%"><h1>Closing Stock</h1></th>
            <th class="text-right" width="10%"><h1>Average Rate</h1></th>
            <th class="text-right" width="10%"><h1>Total Amount</h1></th>
            <th width="5%"><h1>Unit</h1></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody class="grid_row">
            <tr @if(item.Quantity < 0)
            { 
                @:class="report-highlight"
            }>
            <td class="grid-cell">@item.ItemName</td>
            <td class="grid-cell">@item.ItemRefNo</td>
            <td class="grid-cell">@item.PartNo</td>
            <td class="grid-cell text-right">@item.Quantity</td>
            <td class="grid-cell text-right">@item.AverageRate</td>
            <td class="grid-cell text-right">@(item.Quantity * item.AverageRate)</td>
            <td class="grid-cell">@item.UnitName</td>

        </tr>

    </tbody>
    }
</table>