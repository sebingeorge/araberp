@model ArabErp.Domain.EmployeeCategory
@{ ViewBag.Title = "create";Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#EmployeeCategory_form').bootstrapValidator({
            fields: {
                EmpCategoryRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                EmpCategoryName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

            }
        });
    })

</script>




<div class="container">
    <div class="row ">

        <div class="form-head1">
            <h4>Employee Category</h4>
        </div>




        <div class="main-part pad1">

            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-4">


                    @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "EmployeeCategory_form" }))
                    {

                        <div class="part4">

                            <label for="EmpCategoryRefNo">Code</label>
                            @Html.TextBoxFor(m => m.EmpCategoryRefNo, new { @class = "form_input form_input-half", autocomplete = "off" })

                        </div>



                        <div class="part4">
                            <label for="EmpCategoryName">Name</label>
                            @Html.TextBoxFor(m => m.EmpCategoryName, new { @class = "form_input", autocomplete = "off" })
                        </div>

    <div class="row">

        <div class="col-md-12 hrpart">
            <button type="button" class="form-button right">Exit</button>
            <button type="submit" class="form-button right">Save</button>
        </div>

    </div>


                    }

                </div>

            </div>

        </div>


        <div class="col-md-3">
        </div>

        <div class="main-list">
            @Html.Action("FillEmployeeCategoryList")
        </div>

          @*<div class="row">
             <div class="col-md-12">
                @Html.Action("FillEmployeeCategoryList")
            </div>
        </div>*@

    </div>

    </div>

