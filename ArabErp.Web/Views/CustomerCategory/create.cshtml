
@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h4bgcolor ">
    <h4>Customer Category</h4>
</div>

<div class="container ">
    <div class="row ">

        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <form role="form" >
                <div class="row form-group ">

                    <div class="col-md-6">
                        <label for="CusCategoryRefNo">Code</label>
                        <input type="text" id="CusCategoryRefNo" autocomplete="off" class="form_input " />
                    </div>

                    <div class="col-md-6 ">
                        <label for="CusCategoryName">Category</label>
                        <input type="text" id="CusCategoryName" autocomplete="off" class=" form_input " />
                    </div>

                </div>

                <div class=" row form-group ">
                    <div class="col-md-6 ">
                        <label for="CusCategoryShortName">Short Name</label>
                        <input type="text" id="CusCategoryShortName" autocomplete="off" class=" form_input " />
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-12">
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>

        <div class="col-md-3">

        </div>

    </div>
</div>
