@model ArabErp.Domain.CustomerCategory

@{Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#CustomerCategory_form').bootstrapValidator({
            fields: {
                CusCategoryRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                CusCategoryName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

                //CusCategoryShortName: {
                //    validators: {
                //        notEmpty: {
                //            message: 'Please Enter Short Name'
                //        }
                //    }
                //},

            }
        });
    })

    $(document).ready(function () {


        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "" && '@TempData["CusCategoryRefNo"]' != "") {
            toastr.success('@TempData["success"]' + '  Customer Category Ref No. is : ' + '@TempData["CusCategoryRefNo"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }
    });


    function Exit() {
        location.href = '@Url.Action("Create")';
    }

</script>



<div class="container ">
    <div class="row ">
        <div class="form-head1">
            <h4>Customer Category</h4>
        </div>
        <div class="main-part pad1">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "createFrom", @id = "CustomerCategory_form" }))
            {

                <div class="row">

                    <div class="col-md-4">

                        @Html.HiddenFor(m => m.CusCategoryId, new { @class = "form_input form_input-half", autocomplete = "off" })

                        <div class="part4">
                            <label for="CusCategoryRefNo">Code</label>
                            @Html.TextBoxFor(m => m.CusCategoryRefNo, new { @class = "form_input form_input-half", autocomplete = "off", @readonly = "readonly" })
                        </div>

                        <div class="part4">
                            <label for="CusCategoryShortName">Short Name</label>
                            @Html.TextBoxFor(m => m.CusCategoryShortName, new { @class = "form_input", autocomplete = "off" })
                        </div>

                        <div class="part4">
                            <label for="CusCategoryName">Name</label>
                            @Html.TextBoxFor(m => m.CusCategoryName, new { @class = "form_input", autocomplete = "off" })
                        </div>

                    </div>

                    <div class="col-md-4">
                    </div>

                    <div class="col-md-4">
                    </div>

                    <div class="col-md-12 hrpart">

                        <button type="button" class="form-button right" onclick="Exit()">Exit</button>

                        @if (@ViewBag.Title == "Create")
                        {
                            <button type="submit" class="form-button right">Save</button>
                        }

                        @if (@ViewBag.Title == "Edit")
                        {
                            <button type="submit" class="form-button right">Update</button>
                        }

                        @if (@ViewBag.Title == "Delete")
                        {
                            <button type="submit" class="form-button right">Delete</button>
                        }

                    </div>

                </div>
            }
        </div>

        <div class="main-list">
            @Html.Action("FillCustomerCategoryList")
        </div>

    </div>
 </div>
