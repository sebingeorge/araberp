                                @Html.TextBoxFor(m => m.cmpWorkSheetNo, new { @class = "form_input", autocomplete = "off" })
                                <div class="part4">
                                    <label for="cmpFormPrefix">Company Form Prefix</label>
                                    @Html.TextBoxFor(m => m.cmpFormPrefix, new { @class = "form_input", autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                  
                      </div>
                </div>
                 
                    <div class="col-md-4">
                    </div>

                    <div class="col-md-4">
                    </div>

                    <div class="col-md-12 hrpart">
                        <button type="button" class="form-button right" onclick="Exit();">Exit</button>
                        @if (actionName == "Edit")
                    { <button type="submit" class="form-button right">Update</button> }
                    else
                        if (actionName == "Delete")
                        {  <button type="submit" class="form-button right">Delete</button>}
                        else
                        { <button type="submit" class="form-button right">Save</button>}

                    </div>

                </div>
                }
            </div>
     </div>