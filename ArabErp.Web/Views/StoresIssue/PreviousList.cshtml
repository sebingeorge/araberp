@model IList<ArabErp.Domain.StoresIssuePreviousList>

@{
    ViewBag.Title = "Previous Stores Issue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
 
    function Open(id) {
        var url = '@Url.Action("Edit")';
        url += "?id=" + id;
        window.location = url;
    }
   
    function Exit()
    {
        var url = '@Url.Action("Pending")';
        window.location = url;
    }
</script>


    <div class="row">
        <div class="form-head1">
            <h4>Stores Issue List</h4>
        </div>
        <div class="main-part pad1">
            <div class="row">
                <div class="main-grid main-grid-top scroll1">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="grid_heading">
                                    <th width="18%" nowrap><h1>Stores Issue No. &amp; Date</h1></th>
                                    <th width="15%" nowrap><h1>WR No. &amp; Date</h1></th>
                                    <th width="30%" nowrap><h1>Employee</h1></th>
                                    <th width="26%" nowrap><h1>Special Remarks</h1></th>
                                    <th width="10%"><center><h1></h1></center></th>
                                </tr>
                            </thead>
                            <tbody class="grid_row">

                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.StoreIssueRefNo - @item.StoreIssueDate.ToString("dd/MMMM/yyyy")</td>
                                            <td>@item.WorkShopRequestRefNo &amp; @item.WorkShopRequestDate.ToString("dd/MMM/yyyy")</td>
                                            <td>@item.EmployeeName</td>
                                            <td>@item.Remarks</td>
                                            <td>
                                                <center><input type="button" class="form-button4" value="Select" title="Select to view details" onclick="Open(@item.StoreIssueId)" /></center>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5">
                                            <center><em>No items found!</em></center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 hrpart">
                        <button class="form-button right" onclick="Exit()">Exit</button>
                    </div>
                </div>

                </div>
            </div>

