@model IList<ArabErp.Domain.StoresIssuePreviousList>
    <script type="text/javascript">

        function Open(id) {
            var url = '@Url.Action("Edit")';
            url += "?id=" + id;
            window.location = url;
        }

    </script>

    <div class="row">
        <div class="main-grid main-grid-top scroll1">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr class="grid_heading">
                            <th width="10%" nowrap><h1>Stores Issue No. &amp; Date</h1></th>
                            <th width="10%" nowrap><h1>WR No. &amp; Date</h1></th>
                            <th width="10%" nowrap><h1>Jobcard No. </h1></th>
                            <th width="10%" nowrap><h1> Reg No./Chassis No.</h1></th>
                            <th width="20%" nowrap><h1>Customer</h1></th>
                            <th width="30%" nowrap><h1>Special Remarks</h1></th>
                            <th width="10%"><center><h1></h1></center></th>
                        </tr>
                    </thead>
                    <tbody class="grid_row">

                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StoreIssueRefNo - @item.StoreIssueDate.ToString("dd/MMMM/yyyy")</td>
                                    <td>@item.WorkShopRequestRefNo &amp; @item.WorkShopRequestDate.ToString("dd/MMM/yyyy")</td>
                                    <td>@item.JobCardNo</td>
                                    <td>
                                        @item.RegistrationNo
                                        @if ((item.RegistrationNo != null && item.RegistrationNo != "") && (item.ChassisNo != null && item.ChassisNo != ""))
                                        {
                                            @: -
                                                 }
                                        @item.ChassisNo
                                    </td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Remarks</td>
                                    <td>
                                        <center><input type="button" class="form-button4" value="Select" title="Select to view details" onclick="Open(@item.StoreIssueId)" /></center>

                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">
                                    <center><em>No items found!</em></center>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="row-count1">
            <h5>Row Count:- @Model.Count()</h5>
        </div>
    </div>
