@model IList<ArabErp.Domain.WorkShopRequest>

@{
    ViewBag.Title = "Pending Workshop Requests for Stores Issue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    function PreviousList() {
        var url = '@Url.Action("PreviousList")';
        window.location = url;
    }

    function Exit()
    {
        var url = '@Url.Action("Index","Home")';
        window.location = url;
    }


    function Filter() {
        $("#pending_workshop").addClass("fade");
        var url = '@Url.Action("PendingWorkshopRequests")';
        var Request = $("#txtRequest").val().trim();
        var Jobcard = $("#txtJobcard").val().trim();
        var Customer = $("#txtCustomer").val().trim();
        //name = name.replace(/ /g, "+");
        url += "?Request=" + encodeURIComponent(Request) + "&Jobcard=" + encodeURIComponent(Jobcard) + "&Customer=" + encodeURIComponent(Customer);
        $("#pending_workshop").load(url, function () {
            $("#pending_workshop").removeClass("fade");
        });
    }
</script>



    <div class="row">

        <div class="form-head1">
            <h4>Pending Workshop Requests for Stores Issue</h4>
        </div>

        <div class="main-part pad1">

            <div class="row">
                <div class="part">
                    <div class="col-md-4">
                        <label for="txtRequest">Request No.</label>
                        <input type="text" class="form_input" id="txtRequest" onkeyup="Filter()" onchange="Filter()" />
                    </div>
                    <div class="col-md-4">
                        <label for="txtJobcard">Sale Order No.</label>
                        <input type="text" class="form_input" id="txtJobcard" onkeyup="Filter()" onchange="Filter()" />
                    </div>
                    <div class="col-md-4">
                        <label for="txtCustomer">Customer</label>
                        <input type="text" class="form_input" id="txtCustomer" onkeyup="Filter()" onchange="Filter()" />
                    </div>
                </div>
            </div>
            <br />
 
            <div id="pending_workshop">
                @Html.Action("PendingWorkshopRequests")
            </div>

            <div class="row">
                <div class="col-md-12 hrpart">
                    <button class="form-button left" onclick="PreviousList()">Previous</button>
                    <button class="form-button right" onclick="Exit()">Exit</button>
                </div>
            </div>

        </div>
    </div>


