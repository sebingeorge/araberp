@model ArabErp.Domain.StoreIssue
<tbody class="grid_row">
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        <tr id="@i">
            <td>
                <span>@(i + 1)</span>
                @Html.HiddenFor(m => m.Items[i].WorkShopRequestItemId)
                @Html.HiddenFor(m => m.Items[i].ItemId)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Items[i].ItemName, new { @class = "form_input", @disabled = "true", @style = "background:#fefefe" })
            </td>
            <td>@Html.TextBoxFor(m => m.Items[i].RequiredQuantity, new { @class = "form_input text-right", @disabled = "true", @style = "background:#fefefe" })</td>
            <td>@Html.TextBoxFor(m => m.Items[i].IssuedQuantity, new { @class = "form_input text-right", @disabled = "true", @style = "background:#fefefe" })</td>
            <td>
                @Html.TextBoxFor(m => m.Items[i].PendingQuantity, new { @class = "form_input text-right", @disabled = "true", @style = "background:#fefefe" })
            </td>
            <td>
                @Html.TextBoxFor(m => m.Items[i].CurrentIssuedQuantity, new { @class = "form_input text-right" })
            </td>
            <td>
                @Html.TextBoxFor(m => m.Items[i].UnitName, new { @class = "form_input", @disabled = "true", @style = "background:#fefefe" })
            </td>
        </tr>
    }
</tbody>