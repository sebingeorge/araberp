<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>

<div class="table-responsive">

    <div class="main-grid scroll1">

        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.PaymentTermsRefNo).Titled("Code").SetWidth(20);
                            columns.Add(m => m.PaymentTermsName).Titled("Name").SetWidth(200);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(20).RenderValueAs(m => @<a href="@Url.Action("Edit", new { Id=m.PaymentTermsId})">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(20).RenderValueAs(m => @<a href="@Url.Action("Delete", new { Id = m.PaymentTermsId })">Delete</a>);

                        }).WithPaging(10)

    </div>


    <div class="row-count1">
        <h5>Row Count:- @Model.Count()</h5>
    </div>


</div>

