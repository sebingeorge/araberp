
@{ViewBag.Title = "Index";Layout = "~/Views/Shared/_Layout.cshtml";}

<script type="text/javascript">

    function openPop() {
        var url = '@Url.Action("CreateRequest")';
        window.location = url;
    }

    function Exit() {
        location.href = '@Url.Action("Index","Home")';
    }

    $(document).ready(function () {

        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "" && '@TempData["CustomerReceiptRefNo"]' != "" )
        {
            toastr.success('@TempData["success"]' + '  Customer Receipt Ref No. is : ' + '@TempData["CustomerReceiptRefNo"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }
    });

</script>


    <div class="row">

        <div class="form-head form-head3">
            <h4>Receipt Against Customer</h4>
        </div>

        <div class="main-part pad1">

            <div class="row">
                @Html.Action("CustomerReceiptList")
            </div>

            <div class="row">
                <div class="col-md-12 hrpart">
                    <button type="submit" class="form-button" onclick="openPop();">Create</button>
                    <button type="button" class="form-button right" onclick="Exit();">Exit</button>
                </div>
            </div>

        </div>

    </div>



