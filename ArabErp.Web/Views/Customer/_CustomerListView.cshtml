<div class="table-responsive">
    <div class=" main-grid main-grid-top">

        @Html.Grid(Model).Columns(columns =>
                         {
                             //columns.Add(m => m.CustomerId).Titled("Code").SetWidth(30);
                             columns.Add(m => m.CustomerRefNo).Titled("Ref No.").SetWidth(30);
                             columns.Add(m => m.CustomerName).Titled("Customer Name").SetWidth(110);
                             columns.Add(m => m.CusCategoryName).Titled("Customer Category").SetWidth(110);
                             columns.Add(m => m.CountryName).Titled("Country").SetWidth(110);
                             columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Edit", new { Id = m.CustomerId })">Edit</a>);
                             columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Delete", new { Id = m.CustomerId })">Delete</a>);
                        }).WithPaging(10)
 
    </div>

    <div class="row-count1">
  
        <h5>Row Count:- @Model.Count()</h5>
    </div>   

</div>