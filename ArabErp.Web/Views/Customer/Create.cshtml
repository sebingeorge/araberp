@model ArabErp.Domain.Customer

@{Layout = "~/Views/Shared/_Layout.cshtml";}

@{string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString(); }

<script type="text/javascript">

    function Exit() {
        location.href = '@Url.Action("Index")';
    }

    $(document).ready(function () {
        var Action = '@actionName';
        if (Action == 'Delete') {

            $("input[type='text'], select, textarea").attr('disabled', 'disabled');
            $("input[type=radio]").attr('disabled', true);
        }
        if (Action == 'Create') {
            $("#GenderId").prop("checked", true)
        }

        //$("#radio_1").prop("checked", true)
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",

            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "" && '@TempData["CustomerRefNo"]' != "") {
            toastr.success('@TempData["success"]' + '  Customer Code is : ' + '@TempData["CustomerRefNo"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }
        $("#CustomerName").focus();

    });
</script>




        <div class="row">
            <div class="form-head1">
                <h4>Customer</h4>
            </div>
         
               @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "createFrom", @id = "Customer_form" }))
                    {
                    <div class="main-part pad1">
                        <div class="col-md-4">
                            <div class="row rowr">
                                <span>&nbsp;</span><br />
                                <div class="part4">

                                    @Html.HiddenFor(m => m.CustomerId)
                                    @Html.HiddenFor(m => m.CustomerRefNo)

                                    <label for="code">Code</label>
                                    @Html.TextBoxFor(m => m.CustomerRefNo, new { @class = "form_input  form_input-half ", autocomplete = "off", @readonly = "readonly" })
                                </div>

                                <div class="part4">
                                    <label for="name">Name</label>
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="prntname">Print Name</label>
                                    @Html.TextBoxFor(m => m.CustomerPrintName, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="CategoryId">Category</label>
                                    @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CustomerCategory, "Select Category", new { @class = "form_input", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="CurrencyId">Currency</label>
                                    @Html.DropDownListFor(m => m.CurrencyId, (SelectList)ViewBag.CustomerCurrency, "Select Currency", new { @class = "form_input", autocomplete = "off" })
                                </div>
                              </div>
                            </div>


                        <div class="col-md-4">
                            <div class="row rowl rowr">
                                <span><h5>Address & Communication</h5></span><br />
                                <div class="part4">
                                    <label for="doorno">Door No.& Building </label>
                                    @Html.TextBoxFor(m => m.DoorNo, new { @class = "form_input", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="street">Street & City</label>
                                    @Html.TextBoxFor(m => m.Street, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="state">State</label>
                                    @Html.TextBoxFor(m => m.State, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="Country">Country</label>
                                    @Html.DropDownListFor(m => m.Country, (SelectList)ViewBag.CustomerCountry, "Select Country", new { @class = "form_input",autocomplete="off"})
                                </div>

                                <div class="part4">
                                    <label for="zip">Post Box No.</label>
                                    @Html.TextBoxFor(m => m.Zip, new { @class = "form_input ", autocomplete = "off" })
                                </div>
                             </div>
                            </div>

                        <div class="col-md-4">
                            <div class="row rowl">

                                <span>&nbsp;</span><br />
                                <div class="part4">
                                    <label for="phno">Phone No.</label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="fax">Fax</label>
                                    @Html.TextBoxFor(m => m.Fax, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="email">E-mail</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="cntperson">Contact Person</label>
                                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form_input", autocomplete = "off" })
                                </div>

                             </div>

                            <div class="row">
                                <div class="part4 col-md-5">
                                    <label for="CreditPeriod">Credit Period</label>
                                    @Html.TextBoxFor(m => m.CreditPeriod, new { @class = "form_input", autocomplete = "off" })
                                </div>
                                <div class="part4 col-md-5">
                                    <label for="CreditLimit">Credit Limit</label>
                                    @Html.TextBoxFor(m => m.CreditLimit, new { @class = "form_input", autocomplete = "off" })
                                </div>
                            </div>

                       </div>

                        <div class="row">

                            <div class="col-md-12 hrpart">
                                <button type="button" class="form-button right" onclick="Exit();">Exit</button>
                                @if (actionName == "Edit")
                                { <button type="submit" class="form-button right">Update</button> }
                                else
                                    if (actionName == "Delete")
                                    {  <button type="submit" class="form-button right">Delete</button>}
                                    else
                                    { <button type="submit" class="form-button right">Save</button>}

                            </div>


                        </div>

                    </div>
                                      
               }
          
        </div>


