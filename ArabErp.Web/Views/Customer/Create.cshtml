@model ArabErp.Domain.Customer

@{Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#Customer_form').bootstrapValidator({
            fields: {
                CustomerRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Customer No.'
                        }
                    }
                },
                CustomerName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Customer Name'
                        }
                    }
                },
                CategoryId: {
                    validators: {
                        notEmpty: {
                            message: 'Please Select Category'
                        }
                    }
                },
                LeadSourceId: {
                    validators: {
                        notEmpty: {
                            message: 'Please Select lead source'
                        }
                    }
                },
                CurrencyId: {
                    validators: {
                        notEmpty: {
                            message: 'Please Select Currency'
                        }
                    }
                },
                DoorNo: {
                    validators: {
                        //stringLength: {
                        //    min: 8,
                        //},
                        notEmpty: {
                            message: 'Please Enter Door No.& Building'
                        }
                    }
                },
                Street: {
                    validators: {
                        stringLength: {
                            min: 4,
                        },
                        notEmpty: {
                            message: 'Please Enter Street & City'
                        }
                    }
                },
                State: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter State'
                        }
                    }
                },
                Zip: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter  Post Box No.'
                        },
                  
                    }
                },

                Phone: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Phone No.'
                        },
                        phone: {
                            country: 'US',
                            message: 'Please Enter a vaild phone number with area code'
                        }
                    }
                },

                Email: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter E-mail'
                        },
                        emailAddress: {
                            message: 'Please Enter Valid E-mail'
                        }
                    }
                },
            }
        });
    })

    function Exit() {
        location.href = '@Url.Action("Index")';
    }
</script>


    <div class="container body-content">
        <div class="row">
            <div class="form-head">
                <h4>Customer</h4>
            </div>
            <div class="col-md-12">
               @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "createFrom", @id = "Customer_form" }))
                    {
                    <div class="row form-group  main-part pad1">
                        <div class="col-md-4">
                            <div class="row rowr">
                                <span>&nbsp;</span><br />
                                <div class="part4">

                                    @Html.HiddenFor(m => m.CustomerId, new { @class = "form_input  form_input-half ", autocomplete = "off" })

                                    <label for="code">Code</label>
                                    @Html.TextBoxFor(m => m.CustomerRefNo, new { @class = "form_input  form_input-half ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="name">Name</label>
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="prntname">Print Name</label>
                                    @Html.TextBoxFor(m => m.CustomerPrintName, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="CategoryId">Category</label>
                                    @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CustomerCategory, "Select Category", new { @class = "form_input", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="CurrencyId">Currency</label>
                                    @Html.DropDownListFor(m => m.CurrencyId, (SelectList)ViewBag.CustomerCurrency, "Select Currency", new { @class = "form_input", autocomplete = "off" })
                                </div>
                              </div>
                            </div>


                        <div class="col-md-4">
                            <div class="row rowl rowr">
                                <span><h5>Address & Communication</h5></span><br />
                                <div class="part4">
                                    <label for="doorno">Door No.& Building </label>
                                    @Html.TextBoxFor(m => m.DoorNo, new { @class = "form_input", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="street">Street & City</label>
                                    @Html.TextBoxFor(m => m.Street, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="state">State</label>
                                    @Html.TextBoxFor(m => m.State, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="Country">Country</label>
                                    @Html.DropDownListFor(m => m.Country, (SelectList)ViewBag.CustomerCountry, "Select Country", new { @class = "form_input",autocomplete="off"})
                                </div>

                                <div class="part4">
                                    <label for="zip">Post Box No</label>
                                    @Html.TextBoxFor(m => m.Zip, new { @class = "form_input ", autocomplete = "off" })
                                </div>
                             </div>
                            </div>

                        <div class="col-md-4">
                            <div class="row rowl">

                                <span>&nbsp;</span><br />
                                <div class="part4">
                                    <label for="phno">Phone No.</label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="fax">Fax</label>
                                    @Html.TextBoxFor(m => m.Fax, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="email">E-mail</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form_input ", autocomplete = "off" })
                                </div>

                                <div class="part4">
                                    <label for="cntperson">Contact Person</label>
                                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form_input", autocomplete = "off" })
                                </div>
                                
                            </div>



                            </div>

                        <div class="row">

                            <div class="col-md-12 hrpart">

                                <button type="button" class="form-button right" onclick="Exit()">Exit</button>

                                @if (@ViewBag.Title == "Create")
                                {
                                 <button type="submit" class="form-button right">Save</button>
                                }
                                
                                @if(@ViewBag.Title == "Edit")
                                {
                                 <button type="submit" class="form-button right">Update</button>
                                }
                                
                                @if (@ViewBag.Title == "Delete")
                                {
                                 <button type="submit" class="form-button right">Delete</button>
                                }
                                
                            </div>

                        </div>

                    </div>
                                      
               }
            </div>
        </div>
    </div>

