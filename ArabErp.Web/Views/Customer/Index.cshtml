
@{ViewBag.Title = "Index";Layout = "~/Views/Shared/_Layout.cshtml";}

<script type="text/javascript">
    function openPop() {

        var url = '@Url.Action("Create")';

        window.location = url;
    }
    $(document).ready(function () {


        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "" && '@TempData["CustomerRefNo"]' != "") {
            toastr.success('@TempData["success"]' + '  Customer Ref No. is : ' + '@TempData["CustomerRefNo"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }
    });

</script>



<div class="container">
    <div class="row">

        <div class="form-head  form-head3">
            <h4>Customer List</h4>
        </div>

        <div class="main-part white pad1">

            <div class=" row">
                @Html.Action("CustomerList")
            </div>

            <div class="marg6">
                <button type="button" onclick="openPop();" class="form-button top5">Create</button>
            </div>
        </div>
    </div>
</div>
