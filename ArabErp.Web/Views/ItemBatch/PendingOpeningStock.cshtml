@model IList<ArabErp.Domain.ItemBatch>

@{
    ViewBag.Title = "Pending Opening Stock For Assigning Serial Number";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        //---------------------toastr---------------------------//
        toastr.options = {
            "positionClass": "toast-bottom-full-width",
            "timeOut": "5000",
            "extendedTimeOut": "2000"
        }
        if ('@TempData["success"]' != '') {
            toastr.success('@TempData["success"]');
        }
        else if ('@TempData["error"]' != '') {
            toastr.error('@TempData["error"]'.split('|')[0]);
            console.log('@TempData["error"]'.split('|')[1]);
        }
        @{ TempData["success"] = TempData["error"] = ""; }
        //------------------------------------------------------//

    })

    function OnItemSelected(id) {
        var url = '@Url.Action("Create")';
        url += "?id=" + id + "&type=1";
        window.location = url;
    }

    function PreviousList() {
        var url = '@Url.Action("Index")';
        window.location = url;
    }

</script>

<div class="row">

    <div class="form-head1">
        <h4>Pending Opening Stock For Assigning Serial Number</h4>
    </div>

    <div class="main-part pad1">
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr class="grid_heading">
                                <th class="text-center" width="2%">#</th>
                                @*<th width="15%"><h1>GRN No. & Date</h1></th>*@
                                <th width="28%"><h1>Item</h1></th>
                                <th class="text-right" width="5%" nowrap"><h1>Quantity</h1></th>
                                @*<th width="20%"><h1>Supplier</h1></th>*@
                                <th nowrap width="10%"><h1>Warehouse/Stockpoint</h1></th>
                                @*<th width="5%" nowrap><h1>Ageing</h1></th>
                                <th width="7%" nowrap><h1>Type</h1></th>*@
                                <th width="10%"><center><h1></h1></center></th>
                            </tr>
                        </thead>
                        <tbody class="grid_row">
                            @{
                                if (Model.Count > 0)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td align="center">
                                                @*<input type="text" value="*@@(i + 1)@*" style="width:25px" class="form_input text-center" disabled />*@
                                            </td>
                                            @*<td>
                                                    <input type="text" value="@Model[i].GRNNo - @Model[i].GRNDate.ToString("dd MMMM yyyy")@*" class="form_input" disabled />
                                                </td>*@
                                            <td>
                                                @*<input type="text" value="*@@Model[i].ItemName@*" class="form_input" disabled />*@
                                            </td>
                                            <td>
                                               <input type="text" value=@Model[i].Quantity class="form_input text-right" disabled />
                                            </td>
                                            @*<td>
                                                    <input type="text" value="@Model[i].Remarks" class="form_input" disabled />
                                                </td>*@
                                            @*<td>
                                                <input type="text" value="@Model[i].SupplierName" class="form_input" disabled />
                                            </td>*@
                                            <td>
                                                @*<input type="text" value="*@@Model[i].StockPointName@*" class="form_input" disabled />*@
                                            </td>
                                            @*<td>
                                                <input type="text" value="@Model[i].Ageing" class="form_input" disabled />
                                            </td>
                                            <td nowrap>
                                                <input type="text" value="@Model[i].isDirect" class="form_input" disabled />
                                            </td>*@
                                            <td>
                                                <center><input type="button" class="form-button4" value="Select" title="Select this item to assign serial number" onclick="OnItemSelected('@Model[i].OpeningStockId')"
                                                               @if(Model[i].Quantity==0)
                                                               {
                                                                   @:style="display:none"
                                                               }
                                                                   /></center>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5">
                                            <center><em>No items to show!</em></center>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12 hrpart">
                <input type="button" class="form-button" onclick="PreviousList()" value="Previous">
                @*<button type="submit" class="form-button right">Proceed</button>*@
            </div>

        </div>
    </div>
</div>
