<div class="table-responsive">
    <div class="main-grid main-grid-top scroll1">
        @*<div class="main-grid scroll1">*@

        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.OrganizationRefNo).Titled("Code").SetWidth(30);
                            columns.Add(m => m.OrganizationName).Titled("Name").SetWidth(120);
                            columns.Add(m => m.CurrencyName).Titled("Currency").SetWidth(90);
                            columns.Add(m => m.CountryName).Titled("Country").SetWidth(90);
                            columns.Add(m => m.CompanyName).Titled("Company").SetWidth(110);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Edit", new { Id = m.OrganizationId })">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Delete", new { Id = m.OrganizationId })">Delete</a>);

                        }).WithPaging(10)
        </div>
    </div>
    <div class="row-count1">
        <h5>Row Count:- @Model.Count()</h5>
    </div>
 


