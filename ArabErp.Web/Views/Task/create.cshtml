@model ArabErp.Domain.JobCardTaskMaster

@{ViewBag.Title = "create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#Task_form').bootstrapValidator({
            fields: {
                JobCardTaskRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                JobCardTaskName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

            }
        });
    })

</script>



<div class="container ">
    <div class="row ">

        <div class="form-head1">
            <h4>Task</h4>
        </div>

        <div class="main-part pad1">
            <div class="row">

                <div class=" col-md-4">
                    @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "Task_form" }))
                    {

                        <div class="part4">
                            <label for="JobCardTaskRefNo">Code</label>
                            @Html.TextBoxFor(m => m.JobCardTaskRefNo, new { @class = "form_input form_input-half", autocomplete = "off" })
                        </div>


                        <div class="part4">
                            <label for="JobCardTaskName">Name</label>
                            @Html.TextBoxFor(m => m.JobCardTaskName , new { @class = "form_input", autocomplete = "off" })
                        </div>



                    }


                </div>

                <div class="col-md-8">
                </div>
                <div class="col-md-12 hrpart">
                    <button type="button" class="form-button right">Exit</button>
                    <button type="submit" class="form-button right">Save</button>
                </div>



            </div>



        </div>

        <div class="main-list">
            @Html.Action("FillTaskList")
        </div>

