@model ArabErp.Domain.Task

@{ViewBag.Title = "create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#Task_form').bootstrapValidator({
            fields: {
                TaskRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                TaskName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

            }
        });
    })

</script>



<div class="container ">
    <div class="row ">

        <div class="form-head1">
            <h4>Task</h4>
        </div>

        <div class="main-part pad1">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class=" col-md-4">
                    @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "Task_form" }))
                    {

                        <div class="part">
                            <label for="TaskRefNo">Code</label>
                            @Html.TextBoxFor(m => m.TaskRefNo, new { @class = "form_input form_input-half", autocomplete = "off" })
                        </div>


                        <div class="part">
                            <label for="TaskName">Name</label>
                            @Html.TextBoxFor(m => m.TaskName, new { @class = "form_input", autocomplete = "off" })
                        </div>




                        <div class="marg3">

                            <button type="button" class="form-button top1">Exit</button>



                            <button type="submit" class="form-button">Save</button>

                        </div>




                    }


                </div>

                <div class="col-md-4">
                </div>

            </div>





        </div>
        <div class="row">

            <div class="col-md-12">
                @Html.Action("FillTaskList")
            </div>

        </div>
