@model List<ArabErp.Domain.SalesInvoicePostingList>
<div class="row">
    <div class="main-grid main-grid-top scroll1">
        <div class="table-responsive">
            <table class="table table-b table-bordered">
                <thead>
                    <tr class="grid_heading">
                        <th width="35% "><h1>Bill No</h1></th>
                        <th width="20% "><h1>Bill Date</h1></th>
                        <th width="25% "><h1>Supplier</h1></th>
                        <th width="20%"><h1>Bill Ref.</h1></th>
                        <th width="10%" class="text-right" nowrap><h1>Bill Amount</h1></th>
                        <th width="5% "><h1>Currency</h1></th>
                        <th width="5%" style="vertical-align:middle" title="Check this to select all checkboxes below" nowrap>
                            <h1>Export</h1>
                        </th>
                    </tr>
                </thead>
                <tbody class="grid_row">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        @Html.HiddenFor(m => m[i].SalesInvoiceId)
                        <tr>
                            <td><input type="text" class="form_input" value="@Model[i].SalesInvoiceRefNo" disabled /></td>
                            <td><input type="text" class="form_input" value="@Model[i].SalesInvoiceDate.ToString("dd-MMM-yyyy")" disabled /></td>
                            <td><input type="text" class="form_input" value="@Model[i].CustomerName" disabled /></td>
                            <td align="right"><input type="text" class="form_input" value="@Model[i].TotalAmount" disabled /></td>
                            <td><input type="text" class="form_input" value="@Model[i].CustomerName" disabled /></td>
                            <td><input type="button" id="btnExportToExcel_@Model[i].SalesInvoiceId" value="Export" onclick="ExportSalesBill(@Model[i].SalesInvoiceId)" /></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div class="row-count1">
        <h5>Row Count:- @Model.Count()</h5>
    </div>
</div>
<script>
    function ExportSalesBill(Id)
    {
        var url = '@Url.Action("ExportSalesBill")';
        url = url + "?Id=" + Id;
        location.href = url;
    }
</script>
