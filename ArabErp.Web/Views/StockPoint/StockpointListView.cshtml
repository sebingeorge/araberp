@model IList<ArabErp.Domain.Stockpoint>
@using GridMvc.Html

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>

<div class="table-responsive">
    <div class="main-grid">
        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.StockPointRefNo).Titled("Ref No.").SetWidth(10);
                            columns.Add(m => m.StockPointName).Titled("Name").SetWidth(70);
                            columns.Add(m => m.StockPointShrtName).Titled("Short Name").SetWidth(70);

                            columns.Add().Encoded(false).Sanitized(false).SetWidth(70).RenderValueAs(o => @<a href="">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(69).RenderValueAs(o => @<a href="">Delete</a>);

                            //.Format("<a href="\"DeleteRecord?name={CategoryName}\"">{CategoryName}</a>");

                            //columns.Add(m => m.CurrencyName).Sortable(true);
                        }).WithPaging(10)
    </div>
</div>



