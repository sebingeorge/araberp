@model ArabErp.Domain.Stockpoint

@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h4bgcolor">
    <h4>StockPoint</h4>
 </div>

<div class="container ">
    <div class="row ">

        <div class=" col-md-3">

        </div>
        <div class="col-md-6 ">
           <form role="form" action="@Url.Action("Save")">

            <div class="row form-group ">
                <div class=" col-md-6 ">
                    <label for="StockPointRefNo">Code</label>
                    @Html.TextBoxFor(m => m.StockPointRefNo, new { @class = "form_input", autocomplete = "off" })
                </div>

                <div class=" col-md-6 ">
                    <label for="StockPointName">Name</label>
                    @Html.TextBoxFor(m => m.StockPointName, new { @class = "form_input", autocomplete = "off" })
                </div>

            </div>

            <div class=" row form-group ">
                <div class=" col-md-6 ">
                    <label for="StockPointShrtName">Short Name</label>
                    @Html.TextBoxFor(m => m.StockPointShrtName, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>

            <div class="row form-group ">
                <div class="col-md-6 ">
                    <label for="StockPointDoorNo">Door No & Building</label>
                    @Html.TextBoxFor(m => m.StockPointDoorNo, new { @class = "form_input", autocomplete = "off" })
                </div>

                <div class="col-md-6 ">
                    <label for="StockPointZip">Zip</label>
                    @Html.TextBoxFor(m => m.StockPointZip, new { @class = "form_input", autocomplete = "off" })
               </div>
            </div>

            <div class="row form-group ">
                <div class="col-md-6 ">
                    <label for="StockPointArea">Street & Area</label>
                    @Html.TextBoxFor(m => m.StockPointArea, new { @class = "form_input", autocomplete = "off" })
                </div>

                <div class="col-md-6 ">
                    <label for="StockPointPhone">Phone No</label>
                    @Html.TextBoxFor(m => m.StockPointPhone, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>

            <div class="row form-group ">
                <div class="col-md-6 ">
                    <label for="StockPointCity">City & State</label>
                    @Html.TextBoxFor(m => m.StockPointCity, new { @class = "form_input", autocomplete = "off" })
                </div>

                <div class="col-md-6 ">
                    <label for="StockPointFax">Fax</label>
                    @Html.TextBoxFor(m => m.StockPointFax, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>

            <div class=" row form-group ">
                <div class="col-md-12">
                    <div style="float:right" class="alignCenter">
                        <button type="submit" class="button-style">Exit</button>
                    </div>
                    <div style="float:right" class="alignCenter">
                        <button type="submit" class="button-style">Save</button>
                    </div>
                </div>
            </div>

            </form>
        </div>

        <div class=" col-md-3">

        </div>

    </div>
</div>
