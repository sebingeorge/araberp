@model ArabErp.Domain.CommissionAgent

@{ViewBag.Title = "Create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#CommissionAgent_form').bootstrapValidator({
            fields: {
                CommissionAgentRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                CommissionAgentName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

                //Address1: {
                //    validators: {
                //        notEmpty: {
                //            message: 'Please Enter Door No'
                //        }
                //    }
                //},

                //Address2: {
                //    validators: {
                //        notEmpty: {
                //            message: 'Please Enter Street'
                //        }
                //    }
                //},

                //Address3: {
                //    validators: {
                //        notEmpty: {
                //            message: 'Please Enter Area & City'
                //        }
                //    }
                //},

                Phone: {
                    validators: {
                        numeric: {
                            message: 'Please Enter Valid Phone No'
                        }
                    }
                },

            }
        });
    })

</script>

<div class="h4bgcolor ">
    <h4>Commission Agent</h4>
</div>

<div class=" container">
    <div class="row">


        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "CommissionAgent_form" }))
                   {

                <div class=" row form-group ">

                    <div class="col-md-6">
                        <label for="CommissionAgentRefNo">Code</label>
                        @Html.TextBoxFor(m => m.CommissionAgentRefNo, new { @class = "form_input", autocomplete = "off" })
                     </div>

                    <div class="col-md-6">
                        <label for="CommissionAgentName">Name</label>
                        @Html.TextBoxFor(m => m.CommissionAgentName, new { @class = "form_input", autocomplete = "off" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address1">Door No</label>
                        @Html.TextBoxFor(m => m.Address1, new { @class = "form_input", autocomplete = "off" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address2">Street</label>
                        @Html.TextBoxFor(m => m.Address2, new { @class = "form_input", autocomplete = "off" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address3">Area & City</label>
                        @Html.TextBoxFor(m => m.Address3, new { @class = "form_input", autocomplete = "off" })
                    </div>

                    <div class="col-md-6">
                        <label for="Phone">Phone</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form_input", autocomplete = "off" })
                    </div>

                </div>

                <div class=" row form-group ">
                    <div class=" col-md-12">
                        <div style="float:right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="col-md-3">
        </div>

    </div>

    <div class="col-md-3">
    </div>

    <div class="col-md-6">
        @Html.Action("FillCommissionAgentList")
    </div>

    <div class="col-md-3">
    </div>
</div>