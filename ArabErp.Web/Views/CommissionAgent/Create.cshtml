@model ArabErp.Domain.CommissionAgent

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h4bgcolor ">
    <h4>Commission Agent</h4>
</div>

<div class=" container">
    <div class="row">


        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            <form role="form" action="@Url.Action("Save")" method="post">
                <div class=" row form-group ">

                    <div class="col-md-6">
                        <label for="CommissionAgentRefNo">Code</label>
                        @Html.TextBoxFor(m => m.CommissionAgentRefNo, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.CommissionAgentRefNo, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label for="CommissionAgentName">Name</label>
                        @Html.TextBoxFor(m => m.CommissionAgentName, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.CommissionAgentName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address1">Door No</label>
                        @Html.TextBoxFor(m => m.Address1, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address2">Street</label>
                        @Html.TextBoxFor(m => m.Address2, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label for="Address3">Area & City</label>
                        @Html.TextBoxFor(m => m.Address3, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Address3, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label for="Phone">Phone</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form_input", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class=" row form-group ">
                    <div class=" col-md-12">
                        <div style="float:right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>

        <div class="col-md-3">
        </div>

    </div>

    <div class="col-md-3">
    </div>

    <div class="col-md-6">
        @Html.Action("FillCommissionAgentList")
    </div>

    <div class="col-md-3">
    </div>
</div>