@model  ArabErp.Domain.Supplier
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h4bgcolor">
    <h4>Supplier</h4>
</div>
<div class="container">
    <div class="row">

        <form role="form">
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="code">Code</label>
                    @Html.TextBoxFor(m => m.SupplierRefNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-5">
                    <label for="name">Name</label>
                    @Html.TextBoxFor(m => m.SupplierName, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-4">
                    <label for="prntname">Print Name</label>
                    @Html.TextBoxFor(m => m.SupplierPrName, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>
            <div class="row form-group">

                <div class="col-md-3">
                    <label for="categry">Category</label>
                    @Html.DropDownListFor(m => Model.CategoryId, (SelectList)ViewBag.symbols, "Select Symbol", new { @class = "form_input" })
                </div>
                <div class="col-md-3">
                    <label for="cntrctupto">Contract Upto</label>
                    @Html.TextBoxFor(m => m.ContractDate, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="purtype">Purchase Type</label>
                    @Html.DropDownListFor(m => Model.PurchaseTypeId, (SelectList)ViewBag.symbols, "Select Symbol", new { @class = "form_input" })
                </div>
                <div class="col-md-3">
                    <div style="font-size :12px">Active</div>
                    <input type="radio" name="">
                    <span class="text" style="font-size :12px">Yes</span>
                    <input type="radio" name="">
                    <span class="text  style=" font-size 12px"">No</span>
                </div>
            </div>
            <div style=" font-weight:bold">Address & Communication</div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="doorno">Door No.& Building</label>
                    @Html.TextBoxFor(m => m.DoorNo, new { @class = "form_input", autocomplete = "off" })
                </div>

                <div class="col-md-3">
                    <label for="street">Street & City</label>
                    @Html.TextBoxFor(m => m.City, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="state">State</label>
                    @Html.TextBoxFor(m => m.State, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="country">Country</label>
                    @Html.DropDownListFor(m => Model.Country, (SelectList)ViewBag.symbols, "Select Symbol", new { @class = "form_input" })
                </div>

            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="zip">Zip</label>
                    @Html.TextBoxFor(m => m.PostBoxNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="phno">Phone No.</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="fax">Fax</label>
                    @Html.TextBoxFor(m => m.Fax, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="email">E-mail</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="supAccNo">Sup Account Ref.No.</label>
                    @Html.TextBoxFor(m => m.AccountNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-6">
                    <label for="cntperson">Contact Person</label>
                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form_input", autocomplete = "off" })
                </div>

            </div>
            <div style="font-weight:bold">Bank & Terms</div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="bnkname">Bank Name</label>
                    @Html.TextBoxFor(m => m.Bank, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="branchname">Branch Name</label>
                    @Html.TextBoxFor(m => m.Branch, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="accdetails">Account Details</label>
                    @Html.TextBoxFor(m => m.AccountDetails, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="swftcode">Swift Code</label>
                    @Html.TextBoxFor(m => m.SwiftCode, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="rtgsno">RTGS No.</label>
                    @Html.TextBoxFor(m => m.RtgsNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="accno">Account No.</label>
                    @Html.TextBoxFor(m => m.AccountNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="disterms">Discount Terms</label>
                    @Html.DropDownListFor(m => Model.DiscountTermsId, (SelectList)ViewBag.symbols, "Select Symbol", new { @class = "form_input" })
                </div>
                <div class="col-md-3">
                    <label for="disrate">Rate of Discount</label>
                    @Html.TextBoxFor(m => m.DiscountRate, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>
            <div class=" row form-group ">
                <div class="col-md-3">
                    <label for="curnc">Currency</label>
                    @Html.DropDownListFor(m => Model.CurrencyId, (SelectList)ViewBag.symbols, "Select Symbol", new { @class = "form_input" })
                </div>
                <div class="col-md-3">
                    <label for="panno">PAN No.</label>
                    @Html.TextBoxFor(m => m.PanNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    <label for="tinno">TIN No.</label>
                    @Html.TextBoxFor(m => m.TinNo, new { @class = "form_input", autocomplete = "off" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <button type="submit" class="button-style">Exit</button>
                </div>
                <div class="col-md-offset-11">
                    <button type="submit" class="button-style">Save</button>
                </div>
            </div>


        </form>

    </div>
</div>

