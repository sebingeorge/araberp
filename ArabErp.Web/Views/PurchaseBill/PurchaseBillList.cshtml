@using ArabErp.Domain
@model IList<PurchaseBill>
@{
    ViewBag.Title = "PurchaseBillList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="form-head1">
            <h4>Purchase Bill List</h4>
        </div>
        <div class="main-part pad1">
            <div class="table-responsive scroll4">
                <table class="table table-bordered">
                    <thead>
                        <tr class="grid_heading">
                            <th width="15%" nowrap><h1>Booking No.</h1></th>
                            <th width="15%" nowrap><h1>Booking Date</h1></th>
                            <th width="40%" nowrap><h1>Supplier</h1></th>
                            <th width="15%" nowrap><h1>Bill No. & Date</h1></th>
                            <th width="15%" class="text-right" nowrap><h1>Amount</h1></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="grid_row">
                        @{
                            if (Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>
                                        <input type="text" class="form_input" value="@Model[i].PurchaseBillRefNo" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].PurchaseBillDate.ToString("dd/MMM/yyyy")" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].Supplier" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].BillNoDate" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input text-right " value="@Model[i].PurchaseBillAmount" disabled />
                                        </td>
                                        
                                        <td>
                                            <input type="button" class="form-button5" value="Edit" title="Click here to edit this entry"  />
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" align="center"><em>There are no puchase bill entries to show!</em></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
         
        </div>
    </div>

</div>

