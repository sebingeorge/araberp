@using ArabErp.Domain
@model IList<PurchaseBill>
@{
    ViewBag.Title = "PurchaseBillList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    function Exit()
    {
        var url = '@Url.Action("Index")';
        window.location = url;
    }

    function OpenEditForm(id)
    {
        var url = '@Url.Action("Edit")';
        url += "/" + id;
        window.location = url;
    }

    $(document).ready(function () {
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "0",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != '') {
            toastr.success('@TempData["success"]');
        }
        else if ('@TempData["error"]' != '') {
            toastr.error('@TempData["error"]'.split('|')[0]);
            console.log('@TempData["error"]'.split('|')[1]);
        }
       @{ TempData["success"] = TempData["error"] = ""; }


       
    })

</script>

    <div class="row">

        <div class="form-head1">
            <h4>Purchase Bill List</h4>
        </div>
        <div class="main-part pad1">
            <div class="table-responsive scroll4">
                <table class="table table-bordered">
                    <thead>
                        <tr class="grid_heading">
                            <th width="15%" nowrap><h1>Booking No.</h1></th>
                            <th width="15%" nowrap><h1>Booking Date</h1></th>
                            <th width="40%" nowrap><h1>Supplier</h1></th>
                            <th width="15%" nowrap><h1>Bill No. & Date</h1></th>
                            <th width="15%" class="text-right" nowrap><h1>Amount</h1></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="grid_row">
                        @{
                            if (Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>
                                        <input type="text" class="form_input" value="@Model[i].PurchaseBillRefNo" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].PurchaseBillDate.ToString("dd/MMM/yyyy")" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].Supplier" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input" value="@Model[i].PurchaseBillNoDate" disabled />
                                        </td>
                                        <td>
                                            <input type="text" class="form_input text-right " value="@Model[i].PurchaseBillAmount" disabled />
                                        </td>
                                        
                                        <td>
                                            <input type="button" value="Select" class="form-button4" onclick="OpenEditForm(@Model[i].PurchaseBillId)" title="Select to view details" />
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" align="center"><em>There are no puchase bill entries to show!</em></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
         
            <div class="row">
                <div class="col-md-12 hrpart">
                    <input class="form-button right" type="button" value="Exit" onclick="Exit()" />
                </div>
            </div>

        </div>
    </div>



