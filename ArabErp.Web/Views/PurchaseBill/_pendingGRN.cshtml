
@using ArabErp.Domain
@model IList<PendingGRN>
@if (Model.Count != 0)
{
    for (int i = 0; i < Model.Count(); i++)
    {

    <tr>
        @Html.HiddenFor(m => m[i].GRNId)
        @Html.HiddenFor(m => m[0].SupplierName)

        <td class="grid-cell">@Model[i].GRNNo  &amp; @Model[i].GRNDate.ToString("dd/MMM/yyyy")</td>
        <td class="grid-cell">@Model[i].SupplierName</td>
        <td class="grid-cell">@Model[i].Ageing </td>

        <td><center>@Html.CheckBoxFor(m => @Model[i].Select, new { @class = "CheckBoxClass clcheck" })</center></td>

    </tr>

}

}
else
{
    <tr>
        <td colspan="5" align="center" valign="middle">
            <em>please select a supplier to continue</em>
        </td>
    </tr>

}
