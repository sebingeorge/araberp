@model ArabErp.Domain.PurchaseBill
<div class="tab_logic">

    <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
            <tr class="grid_heading">

                <th width="20%">GRN No. & Date</th>
                <th width="10%">Material/Spares</th>
                <th width="25%" class="text-right ">Qty</th>
                <th width="5%" class="text-left">UoM</th>
                <th width="5%" class="text-right ">Rate</th>
                <th width="5%" class="text-right ">Discount</th>
                <th width="5%" class="text-right ">Tax%</th>
                <th width="5%" class="text-right ">Tax Amt.</th>
                <th width="5%" class="text-right ">Amount</th>
            </tr>
        </thead>
        <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>



                        <td>
                            @*@Html.HiddenFor(m => m.Items[i].SupplyOrderItemId)*@
                            @Html.TextBoxFor(m => m.Items[i].GRNNo , new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })
                        </td>
                        <td>
                            @*@Html.HiddenFor(m => m.Items[i].ItemId)*@
                            @Html.TextBoxFor(m => m.Items[i].GRNItemId, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })
                        </td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Quantity, new { @class = "form_input", autocomplete = "off", placeholder = "Remarks" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Unit, new { @class = "form_input", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Quantity, new { @class = "form_input clQuantity", @style = "text-align:right", autocomplete = "off", @onchange = "QuantityChanged(" + i + ");" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Unit, new { @class = "form_input ", @style = "text-align:right", autocomplete = "off", @readonly = "Unit" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Rate, new { @class = "form_input ", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Discount, new { @class = "form_input ", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].taxperc, new { @class = "form_input ", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].tax, new { @class = "form_input ", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Amount, new { @class = "form_input clAmount", @style = "text-align:right", autocomplete = "off", @readonly = "readonly" })</td>

                    </tr>
                }

            </tbody>
    <tfoot>
            <tr class="grid_heading">

                <th width="20%" class="text-center"><h1></h1></th>
                <th width="10%" class="text-center"><h1></h1></th>
                <th width="25%" class="text-center"><h1></h1></th>
                <th width="5%" class="text-center"><h1></h1></th>
                <th width="5%" class="text-center"><h1></h1></th>
                <th width="5%" class="text-center"><h1></h1></th>
                <th width="5%" class="text-right"><h1>Total</h1></th>
                @*<th width="5%" class="text-right"><h1>@Html.DropDownListFor(m => Model.CurrencyId, (SelectList)ViewBag.currlist, "Select Currency", new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })</h1></th>*@
                <th width="5%" class="text-right"><span id="QtyAmount"></span></th>
            </tr>
        </tfoot>
    </table>
</div>
