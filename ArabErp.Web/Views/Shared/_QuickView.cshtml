@model ArabErp.Domain.QuickView
           @{
               var alertPermissions = (ArabErp.Domain.AlertPermission)ViewBag.AlertPermissions;
               
               int total = 0;

               if (Model.PendingProjectQuotations && alertPermissions.ProjectQuotApproval == true)
               {
                   total += Model.NoOfProjectQuotations;
               }
               if (Model.PendingTransQuotations && alertPermissions.TransportQuotApproval == true)
               {
                   total += Model.NoOfTransQuotations;
               }
               if (Model.PendingSupplyOrders && alertPermissions.PendingSupplyOrdForGrn == true)
               {
                   total += Model.NoOfSupplyOrders;
               }
               if (Model.PendingDirectPurchaseRequests && alertPermissions.DirectPurchaseReqDorApproval == true)
               {
                   total += Model.NoOfPurchaseRequests;
               }
               if (Model.PendingWorkshopRequests && alertPermissions.PendingSOForWorkshopReq == true)
               {
                   total += Model.NoOfWorkShopRequests;
               }
               if (Model.PendingProjectSaleOrdersForJobCard && alertPermissions.PendingProjectSaleOrdersForJobCard)
               {
                   total += Model.NoOfProjectSaleOrdersForJobCard;
               }
               if (Model.PendingTransSaleOrdersForJobCard && alertPermissions.PendingTransSaleOrdersForJobCard)
               {
                   total += Model.NoOfTransSaleOrdersForJobCard;
               }
               if (Model.MaterialStockBelowMinLevel && alertPermissions.MaterialStockBelowMinLevel)
               {
                   total += Model.NoOfMaterialStockBelowMinLevel;
               }
               if (Model.PendingVechicleInpass && alertPermissions.PendingVechicleInpass)
               {
                   total += Model.NoOfVechicleInpass;
               }
               if (Model.PendingWRForStoreIssue && alertPermissions.PendingWRForStoreIssue)
               {
                   total += Model.NoOfWRForStoreIssue;
               }
               if (Model.PendingJobcardQC && alertPermissions.PendingJobcardQC)
               {
                   total += Model.NoOfJobcardQC;
           }
           }
<ul class="nav navbar-nav">
    <li class="top6"> 
        <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="glyphicon glyphicon-bell" style="top:7px;"></i><span class="badge1">@total</span></a>
        <ul class="dropdown-menu">            
            @if (Model.PendingProjectQuotations && alertPermissions.ProjectQuotApproval == true)
            {
                <li><a href="@Url.Action("ListSalesQuotations", "SalesQuotation", new { ProjectBased = 1, AfterSales = 0 })" class="form_input"><span class="badge pull-right" style="margin-right:5px;">@Model.NoOfProjectQuotations</span>Prj. Quot. For Approval</a></li>
            }
            @if (Model.PendingTransQuotations && alertPermissions.TransportQuotApproval == true)
            {
                <li><a href="@Url.Action("ListSalesQuotations", "SalesQuotation", new { ProjectBased = 0, AfterSales = 0 })" class="form_input"><span class="badge pull-right">@Model.NoOfTransQuotations</span>Trn. Quot. For Approval</a></li>
            }
            @if (Model.PendingSupplyOrders && alertPermissions.PendingSupplyOrdForGrn == true)
            {
                <li><a href="@Url.Action("PendingGrnWareHouse", "GrnWareHouse")" class="form_input"><span class="badge pull-right">@Model.NoOfSupplyOrders</span>Pending Supply Orders for GRN</a></li>
            }
            @if (Model.PendingDirectPurchaseRequests && alertPermissions.DirectPurchaseReqDorApproval == true)
            {
                <li><a href="@Url.Action("Approval", "DirectPurchase")" class="form_input"><span class="badge pull-right">@Model.NoOfPurchaseRequests</span>Dir. Pur. Req. For Approval</a></li>
            }
            @if (Model.PendingWorkshopRequests && alertPermissions.PendingSOForWorkshopReq == true)
            {
                <li><a href="@Url.Action("Pending", "WorkShopRequest" ,new { isprojectbased=0 })" class="form_input"><span class="badge pull-right">@Model.NoOfWorkShopRequests</span>S.O for Work. Requ.</a></li>
            }
            @if (Model.PendingProjectSaleOrdersForJobCard && alertPermissions.PendingProjectSaleOrdersForJobCard)
            {
                <li>
                    <a href="@Url.Action("PendingJobCard", "JobCard", new { isProjectBased = 1 })" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfProjectSaleOrdersForJobCard
                        </span>
                        Prj. SO For Job Card
                    </a>
                </li>
            }
            @if (Model.PendingTransSaleOrdersForJobCard && alertPermissions.PendingTransSaleOrdersForJobCard)
            {
                <li>
                    <a href="@Url.Action("PendingJobCard", "JobCard", new { isProjectBased = 0 })" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfTransSaleOrdersForJobCard
                        </span>
                        Trn. SO For Job Card
                    </a>
                </li>
            }
            @if (Model.MaterialStockBelowMinLevel && alertPermissions.MaterialStockBelowMinLevel)
            {
                <li>
                    <a href="@Url.Action("ReorderLevelList", "Item")" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfMaterialStockBelowMinLevel
                        </span>
                        Material Stock Below Min. Level
                    </a>
                </li>
            }
            @if (Model.PendingVechicleInpass && alertPermissions.PendingVechicleInpass)
            {
                <li>
                    <a href="@Url.Action("Index", "VehicleInPass")" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfVechicleInpass
                        </span>
                        Pending Vehicle Inpass
                    </a>
                </li>
            }
            @if (Model.PendingWRForStoreIssue && alertPermissions.PendingWRForStoreIssue)
            {
                <li>
                    <a href="@Url.Action("Pending", "StoresIssue")" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfWRForStoreIssue
                        </span>
                        Pending WR For Store Issue
                    </a>
                </li>
            }
            @if (Model.PendingJobcardQC && alertPermissions.PendingJobcardQC)
            {
                <li>
                    <a href="@Url.Action("Index", "DeliveryChallan")" class="form_input">
                        <span class="badge pull-right">
                            @Model.NoOfJobcardQC
                        </span>
                        Pending JobcardQC 
                    </a>
                </li>
            }
        </ul>
    </li>
</ul>