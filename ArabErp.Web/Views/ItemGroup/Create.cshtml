@model ArabErp.Domain.ItemGroup
@{ViewBag.Title = "Create";Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#ItemGroup_form').bootstrapValidator({
            fields: {
                ItemGroupRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                ItemGroupName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

                ItemCategoryId: {
                    validators: {
                        notEmpty: {
                            message: 'Please Select Category'
                        }
                    }
                },

            }
        });
    })

</script>

<div class="h4bgcolor">
    <h4>Item Group</h4>
</div>

<div class=" container ">
    <div class=" row ">
        <div class="col-md-3 ">
        </div>

        <div class="col-md-6">
             @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "ItemGroup_form" }))
                   {
                <div class="row form-group ">

                    <div class="col-md-6">
                        <label for="ItemGroupRefNo">Code</label>
                        @Html.TextBoxFor(m =>m.ItemGroupRefNo, new { @class = "form_input", autocomplete = "off" })
                      </div>
                    <div class="col-md-6 ">
                        <label for="ItemGroupName">Name</label>
                        @Html.TextBoxFor(m => m.ItemGroupName, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-6 ">
                        <label for="ItemCategoryId">Category</label>
                        @Html.DropDownListFor(m => Model.ItemCategoryId, (SelectList)ViewBag.ItemCategory, "Select Item Category", new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-12 ">
                        <div style="float:right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

             }
        </div>

        <div class="col-md-3">

        </div>

    </div>

    <div class="row ">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            @Html.Action("FillItemGroupList")
        </div>

        <div class="col-md-3">
        </div>

    </div>
</div>
