@model IList<ArabErp.Domain.ItemGroup>
@using GridMvc.Html

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>

<script>
    function OpenEdit(id) {
       alert("open");
        @*var url = '@Url.Action("Edit")';
        url += "?Id=" + id;
        location.href = '@Url.Action("Edit", "Item")';*@

        var url = '@Url.Action("Edit")';
        //url += "?Id=" + id;
        Location.href = url;
        return false;

    }

    function OpenDelete(id) {
        //alert("open");
        @*var url = '@Url.Action("Edit")';
        url += "?Id=" + id;
        location.href = '@Url.Action("Edit", "Item")';*@

        var url = '@Url.Action("Delete")';
        //url += "?Id=" + id;
        Location.href = url;
        return false;
    }

</script>
<div class="table-responsive">

    <div class="main-grid">

        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.ItemGroupRefNo).Titled("Ref No").SetWidth(30);
                            columns.Add(m => m.ItemGroupName).Titled("Name").SetWidth(110);
                            columns.Add(m => m.CategoryName).Titled("Category").SetWidth(110);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Edit", new { Id = m.ItemGroupId })">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(m => @<a href="@Url.Action("Delete", new { Id = m.ItemGroupId })">Delete</a>);

                        }).WithPaging(10)
        </div>
  
    <div class="row-count1">
        <h5>Row Count:- @Model.Count()</h5>
    </div>
    <br />
</div>

