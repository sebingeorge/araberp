@model IList<ArabErp.Domain.StockJournal>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="2%" class="text-center"><h1>#</h1></th>
            <th width="15%" nowrap><h1>Consumption Ref. No. &amp; Date</h1></th>
            <th width="10%" nowrap><h1>Stock Point</h1></th>
            <th width="28%" nowrap><h1>Materials/Spares</h1></th>
            <th width="15%" nowrap><h1>Employee</h1></th>
            <th width="20%" nowrap><h1>Remarks</h1></th>
            <th width="10%"><center><h1>Select</h1></center></th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @if (Model.Count > 0)
        {
            int i = 0;
            foreach (var item in Model)
            {
                <tr>
                    <td align="center">
                        @(++i)
                    </td>
                    <td>
                        @item.StockJournalRefno- @item.StockJournalDate.Value.ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @item.StockPointName
                    </td>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.EmployeeName
                    </td>
                    <td>
                        @item.Remarks
                    </td>
                    <td>
                        <center><input type="button" value="Select" onclick="OnItemSelected(@item.StockJournalId)" checked class="form-button4" /></center>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <center>
                        <em>No items found!</em>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
