@model  ArabErp.Domain.CustomerVsWorkDescriptionRate

@{ ViewBag.Title = "Create"; Layout = "~/Views/Shared/_Layout.cshtml";}

<script type="text/javascript">

    $(document).ready(function () {
        $("#CustomerId").change(function () {
            var id = $(this).val();

            if (id != '') {
            }

            var url = '@Url.Action("CustomerItemRateList")';
            url += "?CustomerId=" + id;
            $("#Customer-Rate-list").load(url);

            //$("#[0].ItemId").val('@*@Model.OpeningStockItem[0].ItemId*@');
        });

    
    });


    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-bottom-full-width",
        "preventDuplicates": false,
        "onclick": null,

        "timeOut": "0",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }
    if ('@TempData["success"]' != "" && '@TempData["CustomerId"]' != "") {
        toastr.success('@TempData["success"]' + '  Rate Setting - Customer Wise is Updated : ' + '@TempData["CustomerId"]');
    }
    else if ('@TempData["error"]' != "") {
        toastr.error('@TempData["error"]');
    }

    function Exit() {
        location.href = '@Url.Action("Index","Home")';
    }

   

</script>



    <div class="row">
        <div class="form-head1">
            <h4>Customer Wise Work Rate Settings</h4>
        </div>

        <div class=" main-part pad1 ">
            @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "CustomerItemRate_form" }))
            {
                <div class="row">
                    <div class="col-md-12">
                    </div>

                    <div class="col-md-4">
                        <div class="part4">
                            <label for="CustomerId">Customer</label>
                            @Html.DropDownListFor(m => Model.CustomerId, (SelectList)ViewBag.Customerlist, "Select Customer", new { @class = "form_input", autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="main-grid main-grid-top scroll1">
                        <div id="Customer-Rate-list" class="table-responsive">
                            @Html.Action("CustomerItemRateList", new { CustomerId = 0 })
                        </div>
                        </div>
                    </div>

                        <div class="row">

                            <div class="col-md-12 hrpart">
                                <button type="button" class="form-button right" onclick="Exit();">Exit</button>
                                <button type="submit" class="form-button right">Save</button>
                            </div>

                        </div>



                        }



                    </div>
                </div>



