@model  ArabErp.Domain.WorkShopRequest
@{
    ViewBag.Title = "Create WorkShop Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function() {
        $('#saleorder_form').bootstrapValidator({
            fields: {
                WorkShopRequestNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please enter WorkShopRequestNo.'
                        }
                    }
                },
                WorkShopRequestDate: {
                    validators: {
                        notEmpty: {
                            message: 'Please select WorkShopRequestDate'
                        }
                    }
                }


            }
        });
    })

    $(function () {
        $("#WorkShopRequestDate").datepicker({ dateFormat: "dd/MM/yy" });
    });
</script>
<div class="h4bgcolor">
    <h4>WorkShop Request</h4>
</div>
                   
<div class="container">
    <div class="row">
        @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", onsubmit = "return SaleOrderValidation()", @id = "work_form" }))
        {
            <div class="row form-group">
                <div class="col-md-2">
                    <label for="reqno">Request No.</label>
                    @Html.TextBoxFor(m => m.WorkShopRequestNo, new { @class = "form_input", autocomplete = "off" })
                </div>
                <div class="col-md-2 col-md-offset-8">
                    <label for="inputDate">Date</label>
                    @Html.TextBoxFor(m => m.WorkShopRequestDate, String.Format("{0:dd/MM/yy}", Model.WorkShopRequestDate), new { @class = "form_input ", autocomplete = "off", @readonly = "readonly" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="sono">Sale Order No.</label>
                    <input type="text" id="sono" class="form_input" autocomplete="off" />
                </div>
                <div class="col-md-3">
                    <label for="cus">Customer</label>
                    <input type="text" id="cus" class="form_input" autocomplete="off" />
                </div>
                <div class="col-md-3">
                    <label for="cusref">Customer Order Ref.</label>
                    <input type="text" id="cusref" autocomplete="off" class="form_input" />
                </div>
                </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="productr">Product</label>
                    <select id="productr" autocomplete="off" class="form_input">
                        <option>Select Product</option>
                        <option>Product1</option>
                        <option>Product2</option>
                        <option>Product3</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="qty">Qty.</label>
                    <input type="text" id="qty" autocomplete="off" class="form_input" />
                </div>
            </div>
                <div class=" table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th width="5%">Sl.No.</th>
                                <th width="25%">Product</th>
                                <th width="25%">Description</th>
                                <th width="10%">Part No</th>
                                <th width="5%" class="text-right ">Qty</th>
                                <th width="5%">Unit</th>
                            </tr>
                        </thead>
                        <tbody class="grid_row">
                            <tr>
                                <td>1</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label for="SplRemarks1">Spl.Remarks</label>
                        <textarea id="SplRemarks1" autocomplete="off" style="min-width: 100%"></textarea>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-2">
                        <label for="reqdate">Required Date</label>
                        <input type="date" id="reqdate" style="min-width: 100%" class="form_input" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-1">
                        <button type="submit" class="button-style">Exit</button>
                    </div>
                    <div class=" col-md-offset-11">
                        <button type="submit" class="button-style">Save</button>
                    </div>
                </div>
        }
    </div>
</div>


