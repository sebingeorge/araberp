
@model IList<ArabErp.Domain.WorkShopRequest>


<script>
    function OnSelected(id) {

        var url = '@Url.Action("Edit")';
        url += "/" + id;
        window.location = url;

    }
</script>

                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th><h1>Workshop Req.No</h1></th>
                                <th><h1>Date</h1></th>
                                <th><h1>Customer</h1></th>
                                <th><h1>Customer Order Ref.</h1></th>
                                <th><h1>Required Date</h1></th>
                                <th width="1%" class="text-center"></th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody class="grid_row">
                                <tr>
                                    <td class="grid-cell">@item.WorkShopRequestRefNo</td>
                                    <td class="grid-cell">@item.WorkShopRequestDate.ToString("dd/MMM/yyyy")</td>
                                    <td class="grid-cell">@item.CustomerName</td>
                                    <td class="grid-cell">@item.CustomerOrderRef</td>
                                    <td class="grid-cell">@item.RequiredDate.ToString("dd/MMM/yyyy")</td>
                                    <td>
                                        <input type="button" class="form-button4" onclick="OnSelected(@item.WorkShopRequestId)" value="Select" title="Select to view details" />
                                    </td>

                                </tr>

                            </tbody>
                        }
                    </table>

      


    @*</div>*@
@*</div>*@
