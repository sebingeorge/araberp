@model ArabErp.Web.Models.PagedSaleOrderViewModel
@{
    ViewBag.Title = "WorkShopRequestPending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Pending Sale Order</h4>
        </div>
        <div class="main-part pad1">

            <div class="table-responsive border">


                <div class="row">

                    <div class="col-md-12">

                        <div class="col-md-3 grid-left">Customer</div>
                        <div class="col-md-2 grid-left">Customer Order Ref.</div>
                        <div class="col-md-2 grid-left">SO No & Date</div>
                        <div class="col-md-2 grid-left">EDA</div>
                        <div class="col-md-2 grid-left">EDD</div>
                        <div class="col-md-1 grid-left"><center>Select</center></div>

                    </div>


                    @for (int i = 0; i < Model.SaleOrders.Count(); i++)
                    {
                        <div class="col-md-3 mtop">
                            <input type="text" class="form_input" value="@Model.SaleOrders.ElementAt(i).CustomerName" />
                            @*@Html.TextBoxFor(m => m.SaleOrders.ElementAt(i).CustomerName, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })*@
                        </div>
                        <div class="col-md-2 mtop">
                            <input type="text" class="form_input" value="@Model.SaleOrders.ElementAt(i).CustomerOrderRef" />
                            @*@Html.TextBoxFor(m => m.SaleOrders.ElementAt(i).CustomerOrderRef, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })*@
                        </div>
                        <div class="col-md-2 mtop">
                            <input type="text" class="form_input" value="@Model.SaleOrders.ElementAt(i).SoNoWithDate" />
                            @*@Html.TextBoxFor(m => m.SaleOrders.ElementAt(i).SoNoWithDate, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })*@
                        </div>
                        <div class="col-md-2 mtop">
                            <input type="text" class="form_input" value="@Model.SaleOrders.ElementAt(i).EDateArrival.Value.ToString("dd/MMM/yyyy")" />
                            @*@Html.TextBoxFor(m => m.SaleOrders.ElementAt(i).EDateArrival, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })*@
                        </div>
                        <div class="col-md-2 mtop">
                            <input type="text" class="form_input" value="@Model.SaleOrders.ElementAt(i).EDateDelivery.Value.ToString("dd/MMM/yyyy")" />
                            @*@Html.TextBoxFor(m => m.SaleOrders.ElementAt(i).EDateDelivery, new { @class = "form_input", autocomplete = "off", @readonly = "readonly" })*@
                        </div>
                        <div class="col-md-1 mtop form-button2"><center>@Html.ActionLink("Select", "CreateWorkShopRequest", "WorkShopRequest", new { SaleOrderId = Model.SaleOrders.ElementAt(i).SaleOrderId }, null)</center></div>
                    }

                </div>


                <!-- pager -->
                @if (Model.Pager.EndPage > 1)
                {
                    <ul class="pagination">
                        @if (Model.Pager.CurrentPage > 1)
                        {
                            <li>
                                <a href="~/WorkShopRequest/WorkShopRequestPending">First</a>
                            </li>
                            <li>
                                <a href="~/WorkShopRequest/WorkShopRequestPending?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                            </li>
                        }

                        @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                        {
                            <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                                <a href="~/WorkShopRequest/WorkShopRequestPending?page=@page">@page</a>
                            </li>    }

                        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                        {
                            <li>
                                <a href="~/WorkShopRequest/WWorkShopRequestPending?page=@(Model.Pager.CurrentPage + 1)">Next</a>
                            </li>
                            <li>
                                <a href="~/WorkShopRequest/WorkShopRequestPending?page=@(Model.Pager.TotalPages)">Last</a>
                            </li>
                        }
                    </ul>
                }



            </div>

        </div>
    </div>
</div>








