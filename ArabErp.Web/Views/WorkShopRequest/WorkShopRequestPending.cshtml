@model IEnumerable<ArabErp.Domain.SaleOrder>
    @{
        ViewBag.Title = "WorkShopRequestPending";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div class="h4bgcolor">
        <h4>Pending WorkShop Request</h4>
    </div>

    &nbsp;
    <form method="post" action="@Url.Action("CreateWorkShopRequest","WorkShopRequest")">
        <div class=" table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr class="grid_heading">
                        <th>SO No.</th>
                        <th>SO Date</th>
                        <th>Customer</th>
                        <th>Customer Order Ref.</th>
                        <th>Vehicle Model</th>
                    </tr>
                </thead>
                <tbody class="grid_row">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SaleOrderRefNo</td>

                            <td>@item.SaleOrderDate</td>
                            <td>@item.CustomerName</td>
                            <td>@item.CustomerOrderRef</td>
                            <td>@item.VehicleModelId</td>
                        </tr>
                    }
       
                </tbody>
            </table>
        </div>

        <div class="row">

            <div class="col-md-12 col-md-4">
                <div style="float:right" class="alignCenter">
                    <button type="submit" class="button-style">OK</button>
                </div>
            </div>


        </div>
    </form>


