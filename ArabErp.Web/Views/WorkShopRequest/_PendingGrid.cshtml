@*@model ArabErp.Web.Models.PagedSaleOrderViewModel*@
@model List<ArabErp.Domain.SaleOrder>

                <div class="main-grid main-grid-top scroll1">
                <div class=" table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="grid_heading">
                                <th width="1%" class="text-left"><h1>#</h1></th>
                                <th width="12%"><h1>SO.No. & Date</h1></th>
                                <th width="13%"><h1>Customer</h1></th>
                                <th width="12%"><h1>Customer Order Ref.</h1></th>
                                @if(ViewBag.ProjectBased==0)
                                 {
                                <th width="20%" nowrap><h1> Reg No./Chassis No.</h1></th> 
                                 }
                                <th width="20%" nowrap><h1> Work Description</h1></th> 
                                <th width="5%"><h1>Ageing</h1></th>
                                <th width="8%"><h1>EDA</h1></th>
                                <th width="8%"><h1>EDD</h1></th>
                                <th width="7%"><h1>Days Left</h1></th>
                                <th width="10%"><center><h1></h1></center></th>
                            </tr>
                        </thead>
                        <tbody class="grid_row">
                            @{ int row1 = 0;}
                            @if (Model.Count() > 0)
                            {
                            
                                for (int i = 0; i < Model.Count; i++)
                                {

                                    <tr>
                                        <td align="left">
                                           
                                            <span id="slno@(row1)">@(row1 + 1)</span>
                                        </td>
                                        <td class="grid-cell">@*<input type="text" disabled="disabled" class="form_input" value="*@ @Model.ElementAt(i).SaleOrderRefNo@*" /></td>*@
                                        <td class="grid-cell">@*<input type="text" disabled="disabled" class="form_input" value="*@ @Model.ElementAt(i).CustomerName@*" /></td>*@
                                        <td class="grid-cell">
                                            @*<input type="text" disabled="disabled" class="form_input" value="*@ @Model.ElementAt(i).CustomerOrderRef@*" /></td>*@

                                          

                                            @if (Model.ElementAt(i).isProjectBased == 1)
                                            {
                                                 <td class="grid-cell">@Model.ElementAt(i).ItemName</td>
                                            }
                                            else
                                            {
                                                <td class="grid-cell"> @Model.ElementAt(i).RegistrationNo</td>
                                                <td class="grid-cell">@*<input type="text" class="form_input" value="*@ @Model.ElementAt(i).WorkDescription@*" data-toggle="popover" data-placement="right" data-content="@Model.ElementAt(i).WorkDescription" />*@</td>
                                            }
                                        
                                        <td class="grid-cell">@Model.ElementAt(i).Ageing</td>
                                        <td class="grid-cell">@Model.ElementAt(i).EDateArrival.ToString("dd/MMM/yyyy")</td>
                                        <td class="grid-cell">@Model.ElementAt(i).EDateDelivery.ToString("dd/MMM/yyyy")</td>
                                        <td class="grid-cell">@Model.ElementAt(i).Remaindays</td>
                                        <td>
                                      
                                            <center>
                                                @Html.ActionLink("Select", "Create", "WorkShopRequest", new { SaleOrderId = Model.ElementAt(i).SaleOrderId, saleorderitem = Model.ElementAt(i).SaleOrderItemId, SaleOrderItemUnitId = Model.ElementAt(i).SaleOrderItemUnitId,EvaConUnitId = Model.ElementAt(i).EvaporatorUnitId }, new { @class = "form-button5" })
                                            </center>
                                     
                                      
                                        </td>

                                    </tr>
                                    row1++;

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10">
                                        <center><em>There are no pending sale orders found!</em></center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        
                    </table>
                </div>
</div>
