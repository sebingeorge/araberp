@model ArabErp.Domain.Unit
@{ ViewBag.Title = "Create"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<script>
    $(document).ready(function () {
        $('#unit_form').bootstrapValidator({
            fields: {
                UnitRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                UnitName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },
            }
        });
    })

</script>





<div class=" container ">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="form-head form-head2">
                <h4>Unit</h4>
            </div>
            <div class="main-part pad1">


                @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "unit_form" }))
                    {

                    <div class="part">
                        <label for="UnitRefNo">Code</label>
                        @Html.TextBoxFor(m => m.UnitRefNo, new { @class = "form_input", autocomplete = "off" })

                    </div>


                    <div class="part">
                        <label for="UnitName">Name</label>
                        @Html.TextBoxFor(m => m.UnitName, new { @class = "form_input", autocomplete = "off" })

                    </div>


                    <div class="marg2">

                        <button type="button" class="form-button top1">Exit</button>



                        <button type="submit" class="form-button">Save</button>

                    </div>

                    }



            </div>
        </div>


        <div class="col-md-3">
        </div>



        </div>

    <div class=" row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            @Html.Action("FillUnitList")
        </div>

        <div class="col-md-3">
        </div>
    </div>

</div>

