@model ArabErp.Domain.Unit
@{ ViewBag.Title = "Create"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<script>
    $(document).ready(function () {
        $('#unit_form').bootstrapValidator({
            fields: {
                UnitRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                UnitName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },
            }
        });
    })

</script>


<div class=" container ">
    <div class="row">

        <div class="form-head1">
            <h4>Unit</h4>
        </div>

        <div class="main-part pad1">

            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-4">


                    @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "unit_form" }))
                    {

                        <div class="part4">
                            <label for="UnitRefNo">Code</label>
                            @Html.TextBoxFor(m => m.UnitRefNo, new { @class = "form_input form_input-half", autocomplete = "off" })

                        </div>


                        <div class="part4">
                            <label for="UnitName">Name</label>
                            @Html.TextBoxFor(m => m.UnitName, new { @class = "form_input", autocomplete = "off" })

                        </div>

    <div class="row">
     
        <div class="col-md-12 hrpart">
            <button type="button" class="form-button right">Exit</button>
            <button type="submit" class="form-button right">Save</button>
        </div>
       
    </div>




                    }
                </div>


                <div class="col-md-4">
                </div>

            </div>
        </div>

        <div class="main-list">
            @Html.Action("FillUnitList")

        </div>

        @*<div class="row">
            <div class="col-md-12">
               @Html.Action("FillUnitList")
            </div>
        </div>*@


    </div>
</div>

