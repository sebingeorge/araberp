@model IList<ArabErp.Domain.Employee>
@using GridMvc.Html

<style type="text/css">
    .tableData {
        font-size: 12px;
        padding-left: 4px;
    }

    .list {
        display: block;
        height: 320px;
        overflow-y: scroll;
    }

        .list tr:hover {
            background-color: #DFEDF7;
        }
</style>


<div class="table-responsive">

    @Html.Grid(Model).Columns(columns =>
                        {
                            //columns.Add(m => m.EmployeeId).Titled("ID").SetWidth(110);
                            columns.Add(m => m.EmployeeRefNo).Titled("Ref No.").SetWidth(110);
                            columns.Add(m => m.EmployeeName).Titled("Name").SetWidth(110);
                            columns.Add(m => m.Gender).Titled("Gender").SetWidth(110);
                            columns.Add(m => m.DesignationName).Titled("Designation").SetWidth(110);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => @<a href="">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => @<a href="">Delete</a>);

                            //.Format("<a href="\"DeleteRecord?name={CategoryName}\"">{CategoryName}</a>");

                            //columns.Add(m => m.CurrencyName).Sortable(true);
                        }).WithPaging(10)


</div>