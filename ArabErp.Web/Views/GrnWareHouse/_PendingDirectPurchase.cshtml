@model IList<ArabErp.Domain.PendingForGRN>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="10%" nowrap><h1>Request No. &amp; Date</h1></th>
            <th width="20%" nowrap><h1>Special Remarks</h1></th>
            <th width="1%" class="text-right" nowrap><h1>Age (in days)</h1></th>
            <th width="1%" class="text-right" nowrap><h1>Total Amount</h1></th>
            <th width="1%" style="vertical-align:middle" nowrap>
                <h1>
                    <input type="checkbox"> Select all
                </h1>
            </th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @{
            if (Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(m => m[i].DirectPurchaseRequestId)
                            @Html.HiddenFor(m => m[i].isDirectPurchase)
                            <input type="text" class="form_input" value="@Model[i].RequestNoAndDate" disabled />
                        </td>
                        <td>
                            <input type="text" class="form_input" value="@Model[i].SpecialRemarks" disabled />
                        </td>
                        <td>
                            <input type="text" class="form_input text-right" value="@Model[i].Age" disabled />
                        </td>
                        <td>
                            <input type="text" class="form_input text-right" value="@Model[i].TotalAmount" disabled />
                        </td>
                        <td align="center">
                            @Html.CheckBoxFor(m => m[i].isChecked)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" align="center" valign="middle"><em>There are no pending direct purchase requests</em></td>
                </tr>
            }
        }
    </tbody>
</table>
