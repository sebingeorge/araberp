
@using ArabErp.Domain
@model IEnumerable<GRN>

@{ViewBag.Title = "_PreviousList";Layout = "~/Views/Shared/_Layout.cshtml";}

<div class="container">

    <div class="row">

        <div class="form-head1">
            <h4>GRN Previous List</h4>
        </div>

        <div class="main-part pad1">
            <div class="table-responsive">
                <div class="row border ">

                    <div class="col-md-12">
                        <div class="col-md-3 grid-left">GRN No & Date</div>
                        <div class="col-md-3 grid-left">Supplier</div>
                        <div class="col-md-3 grid-left">Supplier DC No And Date</div>
                        <div class="col-md-3 grid-left">Select</div>
                    </div>

                    <div class="col-md-12">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-3"><div class="mtop grid_row_pr">@item.GRNNo &amp; @item.GRNDate.ToString("dd/MMM/yyyy")</div></div>
                            <div class="col-md-3"><div class="mtop grid_row_pr grid_row_pr">@item.Supplier</div></div>
                            <div class="col-md-3"><div class="mtop grid_row_pr">@item.SupplierDCNoAndDate</div></div>
                            <div class="col-md-3"><div class="mtop form-button3">@Html.ActionLink("Select", "Modify", "GrnWareHouse", new { GRNId = @item.GRNId }, null) </div></div>
                        }

                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
