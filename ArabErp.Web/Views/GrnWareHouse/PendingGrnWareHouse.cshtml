@using ArabErp.Domain
@model IEnumerable<PendingSupplyOrder>

@{ViewBag.Title = "PendingGrnWareHouse"; Layout = "~/Views/Shared/_Layout.cshtml";}



<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Pending Sales Orders</h4>
        </div>
        <div class="main-part pad1">

            <div class="table-responsive border">

                <div class="row">

                    <div class="col-md-12">
                        <div class="col-md-5 col-sm-4 col-xs-12 grid-left">Supplier</div>
                        <div class="col-md-3 col-sm-3 col-xs-12 grid-left">SO No & Date</div>
                        <div class="col-md-3 col-sm-3 col-xs-12 grid-left">PR No & Date</div>
                        <div class="col-md-1 col-sm-2 col-xs-12 grid-left"><center>Select</center></div>
                    </div>


                    <div class="col-md-12">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-5 col-sm-4 col-xs-12"><div class="mtop grid_row_pr grid_row_pr">@item.SupplierName</div></div>
                            <div class="col-md-3 col-sm-3 col-xs-12"><div class="mtop grid_row_pr">@item.SoNoWithDate</div></div>
                            <div class="col-md-3 col-sm-3 col-xs-12"><div class="mtop grid_row_pr">@item.QuotaionNoAndDate.</div></div>
                            <div class="col-md-1 col-sm-2 col-xs-12"><div class="mtop form-button3"><center>@Html.ActionLink("Select", "Create", "GrnWareHouse", new { SupplyOrderId = @item.SupplyOrderId }, null)</center> </div></div>
                        }

                    </div>

                </div>

            </div>

        </div>
    </div>
</div>




