@model ArabErp.Domain.User
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="form-head1">
                <h4>New User</h4>
            </div>
            <div class="main-part pad1">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row form-group">
                    <div class="col-md-4">
                        <label for="BayRefNo">Email</label>
                        @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-input" })
                    </div>                    
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label for="BayRefNo">User Name</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-input" })
                    </div>                    
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label for="BayRefNo">Password</label>
                        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-input" })
                    </div>                    
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label for="BayRefNo">Confirm Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
}