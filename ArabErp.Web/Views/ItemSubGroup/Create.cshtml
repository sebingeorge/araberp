@model ArabErp.Domain.ItemSubGroup
@{ ViewBag.Title = "Create";Layout = "~/Views/Shared/_Layout.cshtml";}

<script>
    $(document).ready(function () {
        $('#ItemSubGroup_form').bootstrapValidator({
            fields: {
                ItemSubGroupRefNo: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Code'
                        }
                    }
                },

                ItemSubGroupName: {
                    validators: {
                        notEmpty: {
                            message: 'Please Enter Name'
                        }
                    }
                },

                ItemGroupId: {
                    validators: {
                        notEmpty: {
                            message: 'Please Select Group'
                        }
                    }
                },

            }
        });
    })

</script>

<div class="h4bgcolor">
    <h4>Item SubGroup</h4>
</div>

<div class="container ">
    <div class="row">

        <div class="col-md-3">
        </div>

        <div class="col-md-6">
           @using (Html.BeginForm("Save", null, FormMethod.Post, new { @class = "createFrom", @id = "ItemSubGroup_form" }))
                   {
                <div class="row form-group">

                    <div class="col-md-6">
                        <label for="ItemSubGroupRefNo">Code</label>
                         @Html.TextBoxFor(m => m.ItemSubGroupRefNo, new { @class = "form_input", autocomplete = "off" })
                     </div>

                    <div class="col-md-6 ">
                        <label for="ItemSubGroupName">Name</label>
                        @Html.TextBoxFor(m => m.ItemSubGroupName, new { @class = "form_input", autocomplete = "off" })
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="col-md-6 ">
                        <label for="ItemGroupId">Group</label>
                        @Html.DropDownListFor(m => Model.ItemGroupId, (SelectList)ViewBag.ItemGroup, "Select Item Group", new { @class = "form_input",autocomplete="off" })
                    </div>
                </div>


                <div class="row form-group ">
                    <div class="col-md-12 ">
                        <div style="float:right" class="alignCenter">
                            <button type="button" class="button-style">Exit</button>
                        </div>
                        <div style="float:right" class="alignCenter">
                            <button type="submit" class="button-style">Save</button>
                        </div>
                    </div>
                </div>

           }
        </div>

        <div class="col-md-3">
        </div>

    </div>

    <div class="col-md-3 ">
    </div>

    <div class="col-md-6">
        @Html.Action("FillItemSubGroupList")
    </div>

    <div class="col-md-3">
    </div>

</div>


