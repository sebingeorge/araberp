@model IList<ArabErp.Domain.PurchaseBillRegister>
<div class="main-grid main-grid-top scroll1">
    <table class="table table-bordered" id="purchase-bill-detailed">
        <thead>
            <tr class="grid_heading">
                <th width="30%"><h1>Material/Spares</h1></th>
                <th width="20%"><h1>Category</h1></th>
                <th class="text-right" width="8%"><h1>Qty</h1></th>
                <th class="text-left" width="5%"><h1>Unit</h1></th>
                <th class="text-right" width="10%"><h1>Purchase Amount</h1></th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tbody class="grid_row">
                <tr>
                 
                    <td class="grid-cell">@item.ItemName</td>
                    <td class="grid-cell">@item.CategoryName</td>
                    <td class="grid-cell text-right">@item.Quantity</td>
                    <td class="grid-cell text-left">@item.UnitName</td>
                    <td class="grid-cell text-right">@item.Amount</td>
                </tr>
            </tbody>
        }
        @*<tfoot>
                <tr class="grid_heading">
                    <th width="10%"><h1></h1></th>
                    <th width="25%"><h1></h1></th>
                    <th width="10%"><h1></h1></th>
                    <th width="30%"><h1></h1></th>
                    <th class="text-right" width="5%"><h1></h1></th>
                    <th class="text-right" width="10%"><h1></h1></th>
                    <th class="text-right" width="10%"><h1></h1></th>
                </tr>
            </tfoot>*@
    </table>
</div>

