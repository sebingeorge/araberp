@model IEnumerable<ArabErp.Domain.AdditionOrDeduction>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function GotoCreate()
    {
        var url = '@Url.Action("Create")';
        location.href = url;
    }
</script>

    <div class="form-head1">
        <h4>Addition/Deuction</h4>
    </div>
    <div class="main-part white pad1">
        <div class="row">
           
                <div class="main-grid main-grid-top">
                    <div class="table-responsive">
                        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.AddDedName).Titled("Addition/Deduction").SetWidth(30);
                            columns.Add(m => m.AddDedRemarks).Titled("Remarks").SetWidth(110);
                            columns.Add(m => m.AddDedType).Titled("Type").SetWidth(110);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="" onclick="OpenEdit(@o.AddDedId);">Edit</a>);
                            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Css("cent").RenderValueAs(o => @<a href="" onclick="OpenDelete(@o.AddDedId)">Delete</a>);

                        }).WithPaging(10)
                    </div>

            </div>
        </div>
        <div class="marg">
            <button class="form-button" onclick="GotoCreate()">Add</button>
        </div>
    </div>


<script>
    function OpenEdit(id)
    {
        alert(id);
    }
    function OpenDelete(id)
    {

