
@{
    ViewBag.Title = "PreviousPurchaseOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="form-head1">
        <h4>Previous Purchase Order</h4>
    </div>

    <div class="main-part pad1">


        <div class="row form-group">
            <div class="col-md-2">
                <label>From</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>To</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
