                        <th width="15%"><h1>Supplier</h1></th>
                        <th width="25%"><h1>Item</h1></th>
                        <th width="25%"><h1>Item Description</h1></th>
                        <th width="5%" class="text-right"><h1>Qty</h1></th>
                        <th width="5%" class="text-right"><h1>Unit</h1></th>
                        <th width="5%" class="text-right"><h1>Rate</h1></th>
                        <th width="5%" class="text-right"><h1>Amount</h1></th>
                        <th width="5%" class="text-right"><h1>Status</h1></th>
                    </tr>
                </thead>
