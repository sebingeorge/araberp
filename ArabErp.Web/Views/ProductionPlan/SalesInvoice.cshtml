
@{
    ViewBag.Title = "SalesInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function () {
        $("#date").val("20-09-2016")
        $("#billdate").val("23-09-2016")
        $("#date").datepicker({ dateFormat: "dd-MM-yy" });
        $("#billdate").datepicker({ dateFormat: "dd-MM-yy" });
    });
</script>

<div class="row">
    <div class="form-head1">
        <h4>Sales Invoice</h4>
    </div>

    <div class="main-part pad1">
        <div class="row form-group">
            <div class="col-md-2">
                <label>Invoice Ref. No.</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Date</label>
                <input type="text" id="date" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Bill Due Date</label>
                <input type="text" id="billdate" class="form_input" />
            </div>

        </div>

        <div class="row form-group">
            <div class="col-md-4">
                <label>Customer</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-4">
                <label>Customer Address</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Customer Order Ref.</label>
                <input type="text" class="form_input" />
            </div>
        </div>


        <div class="table-responsive">
            <table class="table table-bordered" id="tab_logic">
                <thead>
                    <tr class="grid_heading">
                        <th width="7%"><h1>Invoice Ref. No.</h1></th>
                        <th width="20%"><h1>Item Name</h1></th>
                        <th width="38%"><h1>Item Description</h1></th>
                        <th width="7%" class="text-right"><h1>Qty</h1></th>
                        <th width="7%" class="text-left"><h1>Unit</h1></th>
                        <th width="7%" class="text-right"><h1>Rate</h1></th>
                        <th width="7%" class="text-right"><h1>Discount</h1></th>
                        <th width="7%" class="text-right"><h1>Amount</h1></th>
                    </tr>
                </thead>
                <tbody>

                    <tr>

                        <td>10001</td>
                        <td>Orginal Potato Chips</td>
                        <td>Description</td>
                        <td class="text-right">1000</td>
                        <td>Kg</td>
                        <td class="text-right">50</td>
                        <td class="text-right">1</td>
                        <td class="text-right">1000</td>

                    </tr>




                </tbody>
                <tfoot>
                    <tr class="grid_heading">

                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>




                    </tr>
                </tfoot>
            </table>
        </div>


        <div class="row form-group">
            <div class="col-md-12">
                <label>Special Remarks</label>
                <input type="text" class="form_input form_input-h" />
            </div>
            </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label>Payment Terms</label>
                <input type="text" class="form_input" />
            </div>
        </div>


            <div class="row form-group">
                <div class="col-md-2">
                    <label>Additional Amount</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-10">
                    <label>Remarks</label>
                    <input type="text" class="form_input" />
                </div>

            </div>

        <div class="row form-group">
            <div class="col-md-2">
                <label>Deduction Amount</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-10">
                <label>Remarks</label>
                <input type="text" class="form_input" />
            </div>

        </div>


            <div class="row">
                <div class="col-md-12 hrpart">
                    <button type="button" class="form-button right">Save</button>
                    <button type="button" class="form-button right" onclick="Exit()">Exit</button>
                </div>

            </div>


        </div>

</div>

<script>

    function Exit() {
        var url = '@Url.Action("Index","ProductionPlan")'
        window.location = url;
    }
</script>