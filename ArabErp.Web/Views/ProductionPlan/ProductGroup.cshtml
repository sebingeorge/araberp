
@{
    ViewBag.Title = "ProductGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="form-head1">
        <h4>Product Group</h4>
    </div>

    <div class="main-part pad1">


        <div class="row form-group">
            <div class="col-md-4">
                <label>Name</label>
                <input type="text" class="form_input" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-4">
                <label>Short Name</label>
                <input type="text" class="form_input" />
            </div>
        </div>

        <div class="row form-group">

            <div class="col-md-4">
                <label>Category</label>
                <select class="form_input">
                    <option value="volvo">Finished Goods</option>
                    <option value="saab">Semi Finished</option>
                    <option value="saab">Raw Material</option>
                    <option value="saab">consumables</option>
                    <option value="saab">Packing Materials</option>
                    <option value="saab">Engineers</option>
                    <option value="saab">Others</option>
                </select>
            </div>
        </div>





        <div class="row">
            <div class="col-md-12 hrpart">
                <button type="button" class="form-button right">Save</button>
                <button type="button" class="form-button right">Exit</button>
            </div>

        </div>


    </div>

</div>
