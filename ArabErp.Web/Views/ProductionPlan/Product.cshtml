
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="form-head1">
        <h4>Product</h4>
    </div>

    <div class="main-part pad1">
        <div class="row form-group">
            <div class="col-md-2">
                <label>Product Code</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Name</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Short Name</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Print Name</label>
                <input type="text" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>Product Line</label>
                <select class="form_input">
                    <option value="volvo">Product Line 1</option>
                    <option value="saab">Product Line 2</option>
                    <option value="opel">Product Line 3</option>
                    <option value="audi">Product Line 4</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Product Group</label>
                <select class="form_input">
                    <option value="volvo">Product Group 1</option>
                    <option value="saab">Product Group 2</option>
                    <option value="opel">Product Group 3</option>
                    <option value="audi">Product Group 4</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Product Sub Group</label>
                <select class="form_input">
                    <option value="volvo">Product Sub Group 1</option>
                    <option value="saab">Product Sub Group 2</option>
                    <option value="opel">Product Sub Group 3</option>
                    <option value="audi">Product Sub Group 4</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Unit</label>
                <select class="form_input">
                    <option value="volvo">Select Unit</option>
                    <option value="saab">Kg</option>
                    <option value="opel">Ltr</option>
                    <option value="audi">Nos</option>
                    <option value="audi">Mtr</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Min. Order Qty</label>
                <input type="text" class="form_input" />
            </div>

            <div class="col-md-4">
                <label>Sourcing Type</label>
                <input type="checkbox" name="" value=""> Own Production
                <input type="checkbox" name="" value="" checked> Out Sourcing

            </div>
        </div>


        <div class="row">
            <div class="col-md-12 hrpart">
                <button type="button" class="form-button" onclick="Add()">Add</button>
                <button type="submit" class="form-button" onclick="Edit()">Edit</button>
            </div>

        </div>


    </div>

</div>

