@model IEnumerable<ArabErp.Domain.MaterialPlanning>


<div id="tableContainer" class="tableContainer">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="scrollTable table table-bordered">
        <thead class="fixedHeader">
            <tr class="grid_heading">
                <th width="35%"><h1><a href="#">Material/Spares</a></h1></th>
                <th width="10%"><h1><a href="#">Part No.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">WR.Qty.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Pnd.Iss.Qty.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Min.Stock</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Tot.Req.Qty.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Curr.Stock</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">InTransit.Qty.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Pnd.PR.Qty.</a></h1></th>
                <th width="5%" class="text-right "><h1><a href="#">Short/Excess</a></h1></th>
                <th width="5%" class="text-left "><h1><a href="#">UoM</a></h1></th>
            </tr>
        </thead>
        <tbody class="scrollContent">
            @foreach (var item in Model)
            {
                <tr class="grid-row">
                    <td width="35%" class="grid-cell">@item.ItemName</td>
                    <td width="10%" class="grid-cell">@item.PartNo</td>
                    <td width="5%" class="grid-cell text-right">@item.WRQTY</td>
                    <td width="5%" class="grid-cell text-right">@item.WRPndIssQty</td>
                    <td width="5%" class="grid-cell text-right">@item.MinLevel</td>
                    <td width="5%" class="grid-cell text-right">@item.TotalQty</td>
                    <td width="5%" class="grid-cell text-right">@item.CurrentStock</td>
                    <td width="5%" class="grid-cell text-right">@item.InTransitQty</td>
                    <td width="5%" class="grid-cell text-right">@item.PendingPRQty</td>
                    <td width="5%" class="grid-cell text-right">@item.ShortorExcess</td>
                    <td width="5%" class="grid-cell">@item.UnitName</td>
                </tr>
            }
        </tbody>
    </table>
</div>



