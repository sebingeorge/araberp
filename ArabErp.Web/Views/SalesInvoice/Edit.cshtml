        //$('.Amount').each(function (i, obj) {
        //    console.log(obj);
        //    qty = qty + eval($("#SaleInvoiceItems_" + i + "__QuantityTxt").val());
        //    rate = rate + eval($("#SaleInvoiceItems_" + i + "__Rate").val());
        //    discount = discount + eval($("#SaleInvoiceItems_" + i + "__Discount").val());
        //    //alert(qty);
