<script>

    function Exit() {
        location.href = '@Url.Action("Index", new { type = Model.InvoiceType })';
    }

    $(function () {
        $("#SalesInvoiceDate").datepicker({ dateFormat: "dd/MM/yy" });
        $("#SalesInvoiceDueDate").datepicker({ dateFormat: "dd/MM/yy" });
    });


    @*function Back() {
        location.href = '@Url.Action("PendingSalesInvoice")';
