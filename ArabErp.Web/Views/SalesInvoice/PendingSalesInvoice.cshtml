@model IList<ArabErp.Domain.SalesInvoice>
@using GridMvc.Html
@{
    ViewBag.Title = "PendingSalesInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script>
    $(document).ready(function () {
      
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "")
           {
            toastr.success('@TempData["success"]' );
        }
        else if ('@TempData["error"]' != "") {
           
            toastr.error('@TempData["error"]');
        }




        $("#data tr").click(function () {
            $(this).toggleClass("highlight");
        });
    });
    $("#data tr").click(function () {
        $(this).toggleClass("highlight");
    });
    function OpenCustomerInvoice(key, Customer, SaleOrderRefNoWithDate) {


        var Url = '@Url.Action("PendingSalesInvoiceDt")';
        $("#SalesInvoiceListDiv").load(Url, { SalesOrderId: key, Customer: Customer, SaleOrderRefNoWithDate: SaleOrderRefNoWithDate });





    }




