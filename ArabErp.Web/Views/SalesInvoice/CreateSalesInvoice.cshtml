
@{
    ViewBag.Title = "CreateSalesInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-color:#BCBABE">
    <h4>Sales Invoice</h4>
</div>
<div class="container ">
    <form>
        <div class="row">
            <div class="col-md-4">
                <div class="col-md-7 form-group">
                    <label for="invno">Invoice No.</label>
                    <input type="text" id="invno" class="form_input" />
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4 ">
                <div class="col-md-7 col-md-offset-5 form-group align_left">
                    <label for="invdate">Date</label>
                    <input type="date" id="invdate" class="form_input" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-7 form-group">
                    <label for="cus">Customer</label>
                    <input type="text" id="cus" class="form_input" />
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4 ">
                <div class="col-md-7 col-md-offset-5 form-group align_left">
                    <label for="cusref">Customer Order Ref.</label>
                    <input type="text" id="cusref" class="form_input" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-7 form-group">
                    <label for="work">Work Description</label>
                    <input type="text" id="work" class="form_input" />
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4 ">
                <div class="col-md-7 col-md-offset-5 form-group align_left">
                    <label for="vehregno">Veh Reg No/Chasis No</label>
                    <input type="text" id="vehregno" class="form_input" />
                </div>
            </div>
        </div>
        <div class="container">
            <div class=" table-responsive">
                <table class="table table-bordered">
                    <thead>
