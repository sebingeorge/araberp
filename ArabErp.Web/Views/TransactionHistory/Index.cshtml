@model IEnumerable<ArabErp.Domain.TransactionHistory>
@{
    ViewBag.Title = "Transaction History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $("#txtFrom").datepicker({
            dateFormat: "dd-MM-yy"
        });
        $("#txtTo").datepicker({
            dateFormat: "dd-MM-yy"
        });
    })
    function Filter()
    {
        var url = '@Url.Action("Grid")';
        var from = $("#txtFrom").val();
        var to = $("#txtTo").val();

        url = url + "?FromDate=" + from + "&ToDate=" + to;
        $("#previous-list").load(url);
    }
</script>
<div class="row">

    <div class="form-head1">
        <h4>Transaction History</h4>
    </div>

    <div class="main-part pad1">
        <div class="row">            
            <div class="col-md-2">
                <label>From</label>
                <input id="txtFrom" value="@System.DateTime.Today.AddMonths(-1).ToString("dd-MMMM-yyyy")" onchange="Filter()" class="form_input" />
            </div>
            <div class="col-md-2">
                <label>To</label>
                <input id="txtTo" value="@System.DateTime.Today.ToString("dd-MMMM-yyyy")" onchange="Filter()" class="form_input" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class="table-responsive" id="previous-list">
                    @Html.Partial("_Grid",Model)
                </div>
            </div>
        </div>
    </div>
</div>

