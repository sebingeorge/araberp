@model IEnumerable<ArabErp.Domain.DeliveryChallan>


<div class="table-responsive">
    <table border="0" cellpadding="0" cellspacing="0" class="scrollTable table table-bordered table-hover">
        <thead>
            <tr class="grid_heading">
                <th width="1%" class="text-center"><h1>#</h1></th>
                <th width="25%"><h1>Customer</h1></th>
                <th width="5%"><h1>Model</h1></th>
                <th width="7%" nowrap><h1>Chassis No.</h1></th>
                <th width="7%" nowrap><h1>Reg No.</h1></th>
                <th width="7%" nowrap><h1>Job Card No.</h1></th>
                <th width="14%" nowrap><h1>Date</h1></th>
                <th width="7%" nowrap><h1>Delivery Date</h1></th>
                <th width="10%" nowrap><h1>Work Description</h1></th>
                <th width="10%" nowrap><h1>Sl.No</h1></th>
                <th width="7%" nowrap><h1>Warranty</h1></th>
                <th width="6%" nowrap><h1>Remarks</h1></th>
            </tr>
        </thead>
        @{int i = 0;}
        @foreach (var item in Model)
        {
            ++i;
            <tbody class="grid_row">
                <tr>
                    <td class="grid-cell">@i</td>
                    <td class="grid-cell">@item.CustomerName</td>
                    <td class="grid-cell">@item.VehicleModelName</td>
                    <td class="grid-cell">@item.ChassisNo</td>
                    <td class="grid-cell">@item.RegistrationNo</td>
                    <td class="grid-cell">@item.JobCardNo</td>
                    <td class="grid-cell">@item.JobCardDate.ToString("dd-MMM-yyyy")</td>
                    <td class="grid-cell">@item.DeliveryChallanDate.ToString("dd-MMM-yyyy")</td>
                    <td class="grid-cell">@item.WorkDescr</td>
                    <td class="grid-cell">@item.SerialNo</td>
                    <td class="grid-cell">@item.WarrantyExpireDate.ToString("dd-MMM-yyyy")</td>
                    <td class="grid-cell">@Html.TextBoxFor(m=>@item.Remarks, new { @class = "form_input", autocomplete = "off" })</td>
                </tr>

            </tbody>
        }
    </table>



</div>
