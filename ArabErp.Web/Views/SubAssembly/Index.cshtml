<div class="row">
    <div class="form-head1">
        <h4>Sub-assembly List</h4>
    </div>

    <div class="main-part pad1">
        <div class="row">
            <div class="main-grid main-grid-top scroll1">
                <div class="table-responsive">
                    @Html.Action("PreviousList")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 hrpart">
                <input type="button" class="form-button left" value="Create" onclick="Create()" />
                <input type="button" class="form-button right" value="Exit" title="Go to Home" onclick="Exit()" />
            </div>
        </div>
    </div>
</div>
