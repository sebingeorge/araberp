@model IList<ArabErp.Domain.PendingSO>

@if (Model.Count != 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @* Customer Name + Ref. No. *@
                <input class="form_input" type="text" value="@Model[i].SaleOrderRefNo" disabled />
            </td>
            <td>
                <input class="form_input" type="text" value="@Model[i].WorkDescr" disabled />
            </td>
            <td>
                @* Vehicle Model Name + Model Description *@
                <input class="form_input" type="text" value="@Model[i].VehicleModelName" disabled />
            </td>
            <td align="center">
                <button class="btn btn-xs btn-primary" onclick="Open('@Model[i].SaleOrderItemId')"><span class="glyphicon glyphicon-pencil" style="top:2px"></span></button>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" align="center" valign="middle">
            <em>Please select a customer to continue</em>
        </td>
    </tr>
}
