@model IList<ArabErp.Domain.OpeningStockReport>
<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="30%"><h1>Material/Spares</h1></th>
            <th width="15%"><h1>Group</h1></th>
            <th width="40%"><h1>SubGroup</h1></th>
            <th width="45%"><h1>Part No</h1></th>
            <th class="text-right" width="10%"><h1>Opening Stock</h1></th>
            <th width="5%"><h1>Unit</h1></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody class="grid_row">
            <tr>
                <td class="grid-cell">@item.ItemName</td>
                <td class="grid-cell ">@item.ItemGroupName</td>
                <td class="grid-cell ">@item.ItemSubGroupName</td>
                <td class="grid-cell">@item.PartNo</td>
                <td class="grid-cell text-right">@item.Quantity</td>
                <td class="grid-cell">@item.UnitName</td>
            </tr>
        </tbody>
    }
</table>
