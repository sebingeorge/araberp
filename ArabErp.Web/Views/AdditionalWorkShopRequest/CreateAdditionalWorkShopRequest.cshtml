
@{
    ViewBag.Title = "CreateAdditionalWorkShopRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="h4bgcolor">
    <h4>Additional WorkShop Request</h4>
</div>
<div class="container">
    <div class="row">
        <form role="form">
            <div class="row form-group">
                <div class="col-md-2">
                    <label for="reqno">Request No.</label>
                    <input type="text" id="reqno" autocomplete="off" class="form_input" />
                </div>
                <div class="col-md-2 col-md-offset-8">
                    <label for="inputDate">Date</label>
                    <input type="date" id="inputDate" class="form_input" autocomplete="off" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <label for="sono">Sale Order No.</label>
                    <input type="text" id="sono" class="form_input" autocomplete="off" />
                </div>
                <div class="col-md-4">
                    <label for="cus">Customer</label>
                    <input type="text" id="cus" class="form_input" autocomplete="off" />
                </div>
                <div class="col-md-3">
                    <label for="cusref">Customer Order Ref.</label>
                    <input type="text" id="cusref" autocomplete="off" class="form_input" />
                </div>
                <div class="col-md-2">
                    <label for="jobcard">Job Card</label>
                    <select id="jobcard" class="form_input">
                        <option>Select Job Card</option>
                        <option>JobCard1</option>
                        <option>JobCard2</option>
                        <option>JobCard3</option>
                    </select>
                </div>
            </div>
            <div class=" table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr class="grid_heading">
                            <th>Sl.No.</th>
                            <th>Part No.</th>
                            <th>Product</th>
                            <th>Spl Remarks</th>
                            <th class="text-right ">Qty.</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody class="grid_row">
                        <tr>
                            <td>1</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <label for="SplRemarks1">Spl.Remarks</label>
                    <textarea id="SplRemarks1" autocomplete="off" style="min-width: 100%"></textarea>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label for="duedate">Due Date</label>
                    <input type="date"  id="duedate" class="form_input" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-1">
                    <button type="submit" class="button-style">Exit</button>
                </div>
                <div class=" col-md-offset-11">
                    <button type="submit" class="button-style">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

