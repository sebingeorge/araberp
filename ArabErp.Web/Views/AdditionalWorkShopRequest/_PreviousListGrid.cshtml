@model IList<ArabErp.Domain.WorkShopRequest>

<table class="table table-bordered">
    <thead>
        <tr class="grid_heading">
            <th width="2%" class="text-center"><h1>#</h1></th>
            <th width="12%" title="Workshop Request No. & Date" nowrap><h1>WR No. &amp; Date</h1></th>
            <th width="12%" nowrap><h1>Sale Order No. &amp; Date</h1></th>
            <th width="12%" nowrap><h1>Job Card No. &amp; Date</h1></th>
            <th width="20%" nowrap><h1>Customer</h1></th>
            <th width="32%" nowrap><h1>Remarks</h1></th>
            <th width="10%"><center></center></th>
        </tr>
    </thead>
    <tbody class="grid_row">
        @if (Model.Count > 0)
        {
            int i = 0;
            foreach (var item in Model)
            {
                <tr>
                    <td align="center">
                        @(++i)
                    </td>
                    <td>
                        @item.WorkShopRequestRefNo- @item.WorkShopRequestDate.ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @item.SaleOrderRefNo- @item.SaleOrderDate.ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @item.JobCardNo- @item.JobCardDate.ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @item.CustomerName
                    </td>
                    <td>
                        @item.SpecialRemarks
                    </td>
                    <td>
                        <center><input type="button" value="Select" onclick="OnItemSelected(@item.WorkShopRequestId)" checked class="form-button4" /></center>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <center>
                        <em>No items found!</em>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
