@model ArabErp.Domain.WorkShopRequest

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#JobCardId").change(function () {
            var id = $(this).val();
            if (id != '') {
                var url = '@Url.Action("GetJobCardDetails")';
                $.getJSON(url, { jobCardId: id },
                    function (data) {
                        $("#SaleOrderId").val(data.SaleOrderId);
                        $("#SaleOrderRefNo").val(data.SaleOrderNo);
                        $("#CustomerName").val(data.Customer);
                        $("#CustomerId").val(data.CustomerId);
                        $("#CustomerOrderRef").val(data.CustomerOrderRef);
                        $("#CustomerOrderRefNo").val(data.CustomerOrderRef);
                    });
            }
            else {
                $("#SaleOrderId").val('');
                $("#SaleOrderRefNo").val('');
                $("#CustomerName").val('');
                $("#CustomerOrderRef").val('');
                $("#CustomerOrderRefNo").val('');
                $("#CustomerId").val('');
            }
        });
    });

    function formValidation() {
        return confirm("Are you sure to Save?");
    }
</script>
<div class="container">
    <div class="row">
        <div class="form-head1">
            <h4>Additional WorkShop Request</h4>
        </div>
        <div class="main-part pad1">
            @using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = "createFrom", onsubmit = "return formValidation()", @id = "stock_return_form" }))
            {
                <div class="row form-group">
                    <div class="col-md-2">
                        <label for="WorkShopRequestNo">Request No.</label>
                        @Html.TextBoxFor(m => m.WorkShopRequestNo, new { @class = "form_input", autocomplete = "off" })
                        @*<input type="text" id="reqno" autocomplete="off" class="form_input" />*@
                    </div>
                    <div class="col-md-2">
                        <label for="WorkShopRequestDate">Date</label>
                        @Html.TextBoxFor(m => m.WorkShopRequestDate, new { @class = "form_input", @type = "date", autocomplete = "off" })
                        @*<input type="date" id="inputDate" class="form_input" autocomplete="off" />*@
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-2">
                        <label for="JobCardId">Job Card</label>
                        @Html.HiddenFor(m => m.SaleOrderId)
                        @Html.HiddenFor(m => m.CustomerId)
                        @Html.HiddenFor(m => m.CustomerOrderRef)
                        @Html.DropDownListFor(m => m.JobCardId, (SelectList)ViewBag.JobCardList, "Select Job Card", new { @class = "form_input", autocomplete = "off" })
                    </div>
                    <div class="col-md-3">
                        <label for="SaleOrderRefNo">Sale Order No.</label>
                        @Html.TextBoxFor(m => m.SaleOrderRefNo, new { @class = "form_input", autocomplete = "off", @disabled = true })
                        @*<input type="text" id="sono" class="form_input" autocomplete="off" />*@
                    </div>
                    <div class="col-md-4">
                        <label for="CustomerName">Customer</label>
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form_input", autocomplete = "off", @disabled = true })
                        @*<input type="text" id="cus" class="form_input" autocomplete="off" />*@
                    </div>
                    <div class="col-md-3">
                        <label for="CustomerOrderRef">Customer Order Ref.</label>
                        @Html.TextBox("CustomerOrderRefNo", "", new { @class = "form_input", autocomplete = "off", @disabled = true })
                        @*<input type="text" id="cusref" autocomplete="off" class="form_input" />*@
                    </div>
                </div>

                <div class=" table-responsive">
                    @Html.Action("AdditionalItemsList")
                </div>

                <div class="row form-group">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="SpecialRemarks">Spl.Remarks</label>
                              </div>
                            <div class="col-md-11">
                                @Html.TextAreaFor(m => m.SpecialRemarks, new { @class = "form_input form_input-h", autocomplete = "off" })
                                @*<textarea id="SplRemarks1" autocomplete="off" class="form_input form_input-h"></textarea>*@
                            </div>
                            </div>
                    </div>
                </div>
                <div class="row form-group">
                        <div class="col-md-1"><label for="RequiredDate">Due Date</label></div>
                        <div class="col-md-2">@Html.TextBoxFor(m => m.RequiredDate, new { @class = "form_input", @type = "date", autocomplete = "off" })
                        @*<input type="date" id="duedate" class="form_input" />*@</div>
                        


                </div>

    <div class="row">

        <div class="col-md-12 hrpart">
            <input type="button" class="form-button right" value="Exit">
            <input type="submit" class="form-button right" value="Save">
        </div>

    </div>

            }
        </div>
    </div>
</div>
