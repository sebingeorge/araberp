        $("#Stock_Movement").load(url, function () {
            $("#Stock_Movement").removeClass("fade");
        });
    }
    function FillItemSubGroup() {
        var Code = $('#ItemGroupId').val();
        var Url = '@Url.Action("ItemSubGroup")';
