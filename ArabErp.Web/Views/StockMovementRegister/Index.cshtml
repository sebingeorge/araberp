        else {
            $("#DivItemSubGroup").load(Url, { Code: Code });
        }
        $("#Stock_Movement").addClass("fade");
        var stkid = $("#cboStockpoint").val();
        var itmcatid = $("#ItemCategoryId").val();
        var ItemGroupId = $("#ItemGroupId").val();
        alert(ItemGroupId)
        var ItemSubGroupId = $("#ItemSubGroupId").val();
        alert(ItemSubGroupId)
        var itmid = $("#filter-Material").val();
        var PartNo = $("#filter-PartNo").val().trim();
        var from = $("#txtFrom").val();
        var to = $("#txtTo").val();
